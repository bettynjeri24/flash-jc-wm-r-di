<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:width="200dp" android:height="30dp" android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:color="@color/primary_green" />
            <solid android:color="@color/accent" android:shadowColor="#26000000" android:shadowDx="0" android:shadowDy="15" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <corners android:radius="10dp" />

        </shape>
    </item>

    <item android:width="200dp" android:height="30dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" android:shadowColor="#26000000" android:shadowDx="0" android:shadowDy="15" />
            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <corners android:radius="10dp" />

        </shape>
    </item>

</selector><!--
