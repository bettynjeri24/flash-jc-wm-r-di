        <item name="hintTextColor">@color/black_cargill</item>
    </style>

    <style name="exposedDropdownMenuCustomWallet" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:textColor">@color/text_grey_color_cargill</item>
        <item name="hintTextColor">@color/black_cargill</item>
        <item name="android:textSize">12sp</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>`
        <item name="boxStrokeColor">@color/text_input_layout_border_color_cargill</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/textInputLayoutRadius</item>
        <item name="boxCornerRadiusTopEnd">@dimen/textInputLayoutRadius</item>
        <item name="boxCornerRadiusBottomStart">@dimen/textInputLayoutRadius</item>
        <item name="boxCornerRadiusTopStart">@dimen/textInputLayoutRadius</item>
    </style>


    <style name="WalletSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/green_cargill2</item>
        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/gray1_cargill
        </item>
        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/gray1_cargill
        </item>
    </style>

    <style name="spinner_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/spinner_background_wallet</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:popupBackground">#DFFFFFFF</item>
    </style>



    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>