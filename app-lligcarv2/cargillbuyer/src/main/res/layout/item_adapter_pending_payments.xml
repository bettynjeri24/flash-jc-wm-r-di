<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/clRootPendingPayment"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_2dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        style="@style/card_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2dp"
        android:background="#F3F7F8"
        android:backgroundTint="#F3F7F8"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_2dp"
        android:paddingRight="@dimen/_2dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvFarmerName"
            android:layout_width="@dimen/_0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:ellipsize="end"
            android:fontFamily="@font/nunitosans_bold_common"
            android:textAllCaps="true"
            android:textColor="#013E4E"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Evans Mwangi" />

        <ImageView
            android:id="@+id/imgEdit"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:backgroundTint="#04A653"
            android:contentDescription="@string/app_name"
            android:src="@drawable/ic_paid_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="#04A653" />

        <View
            android:id="@+id/vGuideline"
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <TextView
            android:id="@+id/tvLoaded"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:text="@string/total_amount"
            android:textColor="@color/colorKcbBlueDark"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintStart_toStartOf="@id/tvStockValue"
            app:layout_constraintTop_toBottomOf="@id/tvStockValue" />

        <TextView
            android:id="@+id/tvTotalAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:fontFamily="@font/nunitosans_regular_common"
            android:text="458000"
            android:textColor="#222222"
            android:textSize="@dimen/text_size"
            app:layout_constraintStart_toStartOf="@id/tvLoaded"
            app:layout_constraintTop_toBottomOf="@id/tvLoaded" />

        <TextView
            android:id="@+id/tvSold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:text="@string/paid_amount"
            android:textColor="@color/colorKcbBlueDark"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStockValue" />

        <TextView
            android:id="@+id/tvPaidAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:text="458000"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSold" />

        <TextView
            android:id="@+id/tvBalanceTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_8dp"
            android:text="@string/balance_amount"
            android:textColor="@color/colorKcbBlueDark"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvStockValue" />

        <TextView
            android:id="@+id/tvbalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:text="458000"
            android:textColor="@color/primary_green"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintEnd_toEndOf="@id/tvBalanceTitle"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceTitle" />

        <TextView
            android:id="@+id/tvStockValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4dp"
            android:fontFamily="@font/nunitosans_semibold_common"
            android:paddingTop="@dimen/margin_padding_small"
            android:paddingBottom="@dimen/margin_padding_small"
            android:text="Payment type: Purchase"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvFarmerName" />

        <TextView
            android:id="@+id/tvReferenceNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8dp"
            android:fontFamily="@font/nunitosans_semibold_common"
            android:paddingTop="@dimen/margin_padding_small"
            android:paddingBottom="@dimen/margin_padding_small"
            android:textColor="@android:color/black"
            android:textSize="@dimen/_14sp_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tvStockValue"
            tools:text="Reference No: 458000" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_padding_small"
            android:background="@android:color/darker_gray"
            app:layout_constraintTop_toBottomOf="@id/tvbalance" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>