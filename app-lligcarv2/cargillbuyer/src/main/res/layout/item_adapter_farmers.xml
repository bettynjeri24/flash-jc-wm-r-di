<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_style"
    android:layout_margin="@dimen/_2dp"
    android:backgroundTint="#F3F7F8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_8dp"
        android:paddingTop="@dimen/_8dp"
        android:paddingEnd="@dimen/_8dp">

        <TextView
            android:id="@+id/tv_farmer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/small_margin"
            android:ellipsize="end"
            android:fontFamily="@font/nunitosans_bold_common"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="#013E4E"
            app:layout_constraintEnd_toStartOf="@id/tv_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Lennox Brown" />

        <TextView
            android:id="@+id/tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/click_bg"
            android:fontFamily="@font/nunitosans_regular_common"
            android:text="@string/more"
            android:textColor="@android:color/black"
            app:drawableEndCompat="@drawable/ic_right"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="@dimen/_8dp"
            android:background="#E2F4F5"
            app:layout_constraintTop_toBottomOf="@id/tv_farmer" />

        <TextView
            android:id="@+id/tv_call_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8dp"
            android:background="@drawable/click_bg"
            android:drawablePadding="@dimen/small_margin"
            android:fontFamily="@font/nunitosans_regular_common"
            android:gravity="center_vertical"
            android:text="@string/call_text"
            android:textColor="#222222"

            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view" />

        <TextView
            android:id="@+id/tv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/small_margin"
            android:background="@drawable/click_bg"
            android:drawablePadding="@dimen/small_margin"
            android:fontFamily="@font/nunitosans_regular_common"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="10sp"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_call_text"
            app:layout_constraintStart_toEndOf="@id/tv_call_text"
            tools:text="+225 04 563 616" />

        <ImageView
            android:id="@+id/iv_call"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8dp"
            android:background="@drawable/green_oval"
            android:padding="@dimen/small_margin"
            android:src="@drawable/call"
            app:layout_constraintBottom_toBottomOf="@id/tv_call_text"
            app:layout_constraintStart_toEndOf="@id/tv_call"
            app:layout_constraintTop_toTopOf="@id/tv_call_text"
            app:tint="@android:color/white" />

        <ImageView
            android:id="@+id/iv_sms"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_side"
            android:background="@drawable/green_oval"
            android:padding="@dimen/small_margin"
            android:src="@drawable/sms"
            app:layout_constraintBottom_toBottomOf="@id/tv_call_text"
            app:layout_constraintStart_toEndOf="@id/iv_call"
            app:layout_constraintTop_toTopOf="@id/tv_call_text"
            app:tint="@android:color/white" />

        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_8dp"
            android:drawablePadding="@dimen/_8dp"
            android:fontFamily="@font/nunitosans_semibold_common"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:drawableEndCompat="@drawable/gps"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Abidjan" />

        <Button
            android:id="@+id/btnPayFarmer"
            style="@style/outline_button"
            android:layout_height="35dp"
            android:layout_marginBottom="0dp"
            android:backgroundTint="#04A653"
            android:fontFamily="@font/nunitosans_regular_common"
            android:padding="0dp"
            android:text="@string/assign_evoucher"
            android:textColor="@android:color/white"
            android:textSize="10dp"
            app:layout_constraintBottom_toTopOf="@id/btn_farm_details"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/view" />

        <Button
            android:id="@+id/btn_farm_details"
            style="@style/outline_button"
            android:layout_height="35dp"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/nunitosans_regular_common"
            android:padding="0dp"
            android:text="@string/farm_details"
            android:textColor="#04A653"
            android:textSize="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
