<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Style for "rectangle" -->
    <!-- Add this snippet to layer-list xml in drawable.  #ff023c60 -->
    <item android:width="328dp" android:height="148dp">
        <shape android:shape="rectangle">
            <corners android:radius="5dp" />
            <gradient android:type="linear" android:useLevel="false"
                android:startColor="@color/primary_green"
                android:endColor="#04A653"
                android:angle="0" />
            <item android:name="android:shadowColor">#04A653</item>
            <!-- TextView shadow offsets do not respect scale. -->
            <item android:name="android:shadowDx">0</item>
            <item android:name="android:shadowDy">0</item>
        </shape>
    </item>
</selector>