<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="white_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="NumberPickerStyle">
        <item name="android:textSize">22sp</item>
        <item name="android:textColorPrimary">@color/primary_green</item>
        <item name="android:colorControlNormal">@color/primary_green</item>
    </style>

    <style name="submenu_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="green_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>

    </style>

    <style name="primary_button" parent="Theme.Cargill">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">@dimen/large_margin</item>
        <item name="android:paddingEnd">@dimen/large_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">@drawable/btn_main</item>
        <item name="fontFamily">@font/nunito_sans_light</item>
        <item name="android:layout_marginBottom">@dimen/main_top</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">true</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="square_button" parent="primary_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/btn_square</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="backgroundTint">@null</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="secondary_button" parent="primary_button">
        <item name="android:textColor">@color/accent</item>
        <item name="android:background">@drawable/btn_side</item>
        <item name="rippleColor">@color/primary</item>
    </style>

    <style name="outline_button" parent="Widget.MaterialComponents.Button.OutlinedButton.Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingStart">@dimen/small_margin</item>
        <item name="android:paddingEnd">@dimen/small_margin</item>
        <item name="android:textColor">@color/accent2</item>
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/nunito_sans_semibold</item>
        <item name="fontWeight">300</item>
        <item name="android:layout_marginBottom">@dimen/main_top</item>
        <item name="android:textAllCaps">false</item>
        <item name="rippleColor">@color/primary</item>
        <item name="android:letterSpacing">-0.05</item>
        <item name="strokeColor">@color/accent2</item>
    </style>


    <style name="TextInputLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/accent</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">@color/accent</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="MyTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

        <!-- Style attributes -->
        <item name="boxStrokeColor">@color/text_input_box_stroke</item>

        <!-- Customised -->
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--    <item name="android:textColorHint">@color/grayish</item>-->
        <!--    <item name="android:textColor">@color/white</item>-->
        <item name="android:layout_marginTop">@dimen/medium_side</item>

        <item name="boxStrokeWidthFocused">3dp</item>
        <item name="boxStrokeWidth">2dp</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="counterEnabled">false</item>

        <item name="counterTextColor">@color/text_input_box_stroke</item>
        <item name="counterOverflowTextColor">@color/text_input_box_stroke</item>
        <item name="errorEnabled">true</item>

        <!-- The color of the label when it is collapsed and the text field is active -->
        <item name="hintTextColor">?attr/colorSecondary</item>

    </style>

    <style name="edit_texts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">@color/primary</item>

    </style>

    <style name="small_blue_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">#00263C</item>
    </style>

    <style name="MaterialConfirmationButtonDefaultStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">58dp</item>
        <item name="rippleColor">@color/primary_green</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_marginStart">32dp</item>
        <item name="android:layout_marginEnd">32dp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:fontFamily">@font/nunito_sans_bold</item>

        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/material_button_conner_radius</item>
    </style>

    <style name="keyboard_row">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:showDividers">none</item>
    </style>
    <!-- LOGIN Pin Pad Button Default  style-->
    <style name="LOGIN_PIN_Pad_MaterialButtonDefaultStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingBottom">12dp</item>
        <item name="background">@color/lightGray</item>
        <item name="android:clickable">true</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textAppearance">?android:attr/textAppearanceLarge</item>
    </style>
    <!--OTP TextInputEditText-->
    <style name="OTP_TextInputEditText" parent="Base.V7.Widget.AppCompat.EditText">
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textColorHighlight">@color/primary_green</item>
        <item name="android:singleLine">true</item>
        <item name="backgroundTint">@color/primary_green</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="android:textAppearance">@style/Base.TextAppearance.AppCompat.Large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MaterialButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="rippleColor">@android:color/white</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">14sp</item>
        <item name="background">@android:color/white</item>
        <item name="android:fontFamily">@font/nunito_sans_semibold</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">5dp</item>
    </style>

    <style name="TabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorHeight">3dp</item>
        <item name="tabBackground">@color/white_gray</item>
        <item name="tabSelectedTextColor">@color/accent3</item>
        <item name="tabIndicatorColor">@color/accent3</item>
        <item name="android:tint">@color/accent3</item>
        <item name="android:elevation">6dp</item>
    </style>

    <style name="DashboardTabStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabMode">fixed</item>
        <item name="tabGravity">fill</item>
        <item name="tabIndicatorFullWidth">true</item>
        <item name="tabBackground">@color/color_white</item>
        <item name="tabIndicatorHeight">@dimen/tab_layout_height</item>
        <item name="tabSelectedTextColor">@color/color_white</item>
        <item name="tabIndicatorColor">@color/primary_green</item>
        <item name="tabIndicatorGravity">bottom</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/primary_green</item>
        <item name="android:textSize">@dimen/textsize_target</item>
        <item name="android:tint">@color/primary_green</item>
        <item name="android:elevation">8dp</item>
    </style>


    <style name="Theme_Dialog" parent="android:Theme.Holo.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">#666666</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="hintEnabled">true</item>
        <item name="hintAnimationEnabled">true</item>
        <item name="android:textColor">#6F7070</item>
        <item name="android:textSize">12sp</item>
        <item name="hintTextColor">@color/black</item>
    </style>

    <style name="otpInputCustomWhite" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense">
        <item name="boxStrokeColor">@color/inputline_color_selector</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="endIconTint">@android:color/white</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>
</resources>