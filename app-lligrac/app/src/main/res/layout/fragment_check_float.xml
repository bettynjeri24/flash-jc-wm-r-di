<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_float"
            style="@style/card_style"
            android:layout_weight="1"
            app:cardBackgroundColor="@android:color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/float_holder"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:padding="@dimen/medium_side">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/cash"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_balance_instr"
                    style="@style/white_text"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/small_margin"
                    android:text="@string/your_float_balance_is"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/imageView"
                    app:layout_constraintTop_toTopOf="@id/imageView"
                    tools:text="Your  Float Balance is:" />

                <TextView
                    android:id="@+id/tv_float_amount"
                    style="@style/white_text"
                    android:layout_width="0dp"
                    android:layout_marginStart="@dimen/small_margin"
                    android:layout_marginTop="@dimen/small_margin"
                    android:text="@string/raw_amount"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/imageView"
                    app:layout_constraintTop_toBottomOf="@id/tv_balance_instr"
                    tools:text="10,000 CFA" />

                <Button
                    android:id="@+id/btn_hide_balance"
                    style="@style/outline_button"
                    android:visibility="gone"
                    android:text="@string/hide_balance"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <Button
                    android:id="@+id/btn_request_float"
                    style="@style/square_button"
                    android:layout_height="30dp"
                    android:paddingTop="0dp"
                    android:paddingBottom="0dp"
                    android:text="@string/request_float"
                    app:layout_constraintTop_toBottomOf="@id/btn_hide_balance"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_graphs"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/medium_side"
            android:layout_marginStart="@dimen/medium_side"
            android:layout_marginEnd="@dimen/medium_side"
            android:background="@android:drawable/dialog_holo_light_frame"
           app:layout_constraintTop_toBottomOf="@id/cv_float">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/bar_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/tv_collection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/main_side"
            android:textColor="#013E4E"
            android:layout_marginTop="@dimen/medium_side"
            android:text="@string/recent_collections"
            android:textAllCaps="true"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_graphs" />

        <TextView
            android:id="@+id/tv_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_side"
            android:layout_marginEnd="@dimen/main_side"
            android:text="@string/view_all"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:fontFamily="@font/nunito_sans_light"
            android:background="@drawable/click_bg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cl_graphs" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_collection_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/medium_side"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_collection"
            tools:listitem="@layout/adapter_collections" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>
