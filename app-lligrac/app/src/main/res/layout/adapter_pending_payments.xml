<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/medium_side"
    xmlns:app="http://schemas.android.com/apk/res-auto">



    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/medium_side"
        android:paddingLeft="@dimen/activity_vertical_medium"
        android:paddingRight="@dimen/medium_side"
        style="@style/card_style"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#F3F7F8"
        android:backgroundTint="#F3F7F8"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evans Mwangi"
            android:fontFamily="@font/nunito_sans_bold"
            android:textAllCaps="true"
            android:textColor="#013E4E"
            android:ellipsize="end"
            android:textSize="@dimen/textsize_small"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/tvFarmerName"/>
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/ic_paid_status"
            android:id="@+id/imgEdit"
            android:backgroundTint="#04A653"
            app:tint="#04A653" />

        <View
            android:layout_width="1dp"
            android:layout_height="1dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/vGuideline"
            app:layout_constraintTop_toTopOf="parent"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/colorKcbBlueDark"
            android:text="@string/total_amount"
            android:id="@+id/tvLoaded"
            app:layout_constraintTop_toBottomOf="@id/tvStockValue"
            app:layout_constraintStart_toStartOf="@id/tvStockValue"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size"
            android:text="458000"
            android:id="@+id/tvTotalAmount"
            android:fontFamily="@font/nunito_sans"
            android:textColor="#222222"
            app:layout_constraintTop_toBottomOf="@id/tvLoaded"
            app:layout_constraintStart_toStartOf="@id/tvLoaded"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/colorKcbBlueDark"
            android:text="@string/paid_amount"
            android:id="@+id/tvSold"
            app:layout_constraintTop_toBottomOf="@id/tvStockValue"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:text="458000"
            android:id="@+id/tvPaidAmount"
            app:layout_constraintTop_toBottomOf="@id/tvSold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/colorKcbBlueDark"
            android:text="@string/balance_amount"
            android:id="@+id/tvBalanceTitle"
            android:layout_marginEnd="@dimen/medium_side"
            app:layout_constraintTop_toBottomOf="@id/tvStockValue"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/textsize_small"
            android:textColor="@color/primary_green"
            android:text="458000"
            android:id="@+id/tvbalance"
            app:layout_constraintTop_toBottomOf="@id/tvBalanceTitle"
            app:layout_constraintEnd_toEndOf="@id/tvBalanceTitle"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFarmerName"

            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_small"
            android:paddingTop="@dimen/margin_padding_small"
            android:paddingBottom="@dimen/margin_padding_small"
            android:text="Payment type: Purchase"
            android:id="@+id/tvStockValue"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFarmerName"
            android:fontFamily="@font/nunito_sans_semibold"
            android:textColor="@android:color/black"
            android:textSize="@dimen/textsize_small"
            android:paddingTop="@dimen/margin_padding_small"
            android:paddingBottom="@dimen/margin_padding_small"
            android:text="Reference No: 458000"
            android:id="@+id/tvReferenceNo"
            android:layout_marginEnd="@dimen/medium_side"
            app:layout_constraintRight_toRightOf="parent"
            />



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintTop_toBottomOf="@id/tvbalance"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="@dimen/margin_padding_small"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>