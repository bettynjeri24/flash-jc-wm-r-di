<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.generalwalletprofile.statement.MiniFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_transactins"
        android:layout_width="match_parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:layout_marginTop="@dimen/medium_side"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/adapter_ministatement"
       app:layout_constraintTop_toTopOf="parent"
        android:layout_height="0dp" />
    <TextView
        android:layout_width="match_parent"

        app:layout_constraintTop_toBottomOf="@id/rv_transactins"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"

        android:textColor="@color/black"
        android:visibility="gone"
        android:gravity="center_vertical"
        android:layout_margin="@dimen/main_side"
        android:text="@string/no_transaction_list"
        android:textSize="@dimen/textsize_vlarge"
        android:fontFamily="@font/nunito_sans_semibold"
        android:id="@+id/tvErrorResponse"/>
</androidx.constraintlayout.widget.ConstraintLayout>