                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/transaction_cost_TextView"
                    app:layout_constraintStart_toStartOf="@+id/transaction_cost_TextView"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_cost_TextView" />


                <TextView
