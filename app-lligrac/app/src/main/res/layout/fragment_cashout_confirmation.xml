                    android:textColor="@color/black"
                    android:textSize="12sp"
                    app:layout_constraintEnd_toEndOf="@+id/transaction_cost_des_TextView"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/transaction_cost_des_TextView"
                    app:layout_constraintTop_toBottomOf="@+id/transaction_cost_des_TextView" />

                <TextView
                    android:id="@+id/exciseDuty_Amount_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
