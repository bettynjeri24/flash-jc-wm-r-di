<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    android:backgroundTint="@color/colorDivider"
    >
    <include
        layout="@layout/transfer_layout_top"
        android:id="@+id/mainLayoutToolbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/medium_side"
        app:cardCornerRadius="@dimen/medium_side"
        android:layout_margin="@dimen/main_top"
        android:translationY="-45dp"
        app:cardBackgroundColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/mainLayoutToolbar">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="@dimen/medium_side"
            app:layout_constraintBottom_toBottomOf="parent"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/txtGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/medium_side"
                app:layout_constraintTop_toTopOf="parent"
                android:id="@+id/tvName"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/medium_side"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                style="@style/MyTextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:editable="false"
                    android:focusable="false"
                    android:text=""
                    android:textSize="@dimen/textsize_large"
                    android:imeOptions="actionNext"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/amount_requested"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/txtGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tlName"
                android:id="@+id/tv"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/medium_side"
                app:layout_constraintTop_toBottomOf="@id/tv"
                style="@style/MyTextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etRequestedAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint=" "
                    android:focusable="false"
                    android:editable="false"
                    android:imeOptions="actionNext"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/confirm_amount"
                android:textStyle="bold"
                android:textAllCaps="true"
                android:textColor="@color/txtGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tlAmount"
                android:id="@+id/tvconfirmAmount"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlApprovedAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/medium_side"
                app:layout_constraintTop_toBottomOf="@id/tvconfirmAmount"
                style="@style/MyTextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etApproveAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/enter_amount"
                    android:imeOptions="actionNext"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlComments"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/medium_side"
                app:layout_constraintTop_toBottomOf="@id/tlApprovedAmount"
                style="@style/MyTextInputLayout"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etComments"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/tv_comments_height"
                    android:hint="@string/enter_comments"
                    android:imeOptions="actionNext"
                    android:inputType="textMultiLine" />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="4dp"
                android:layout_height="1dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/vguideline"
                app:layout_constraintRight_toRightOf="parent"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDecline"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_top"
                android:layout_marginBottom="50dp"
                android:paddingBottom="@dimen/main_top"
                android:padding="10dp"
                android:text="@string/decline"
                app:cornerRadius="50dp"
                app:backgroundTint="@color/red_btn_bg_color"
                android:backgroundTint="@color/red_btn_bg_color"

                app:layout_constraintTop_toBottomOf="@id/tlComments"
                app:layout_constraintEnd_toStartOf="@id/vguideline"
                app:layout_constraintStart_toStartOf="parent" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApproveFunds"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/main_top"
                android:layout_marginBottom="50dp"
               app:backgroundTint="@color/accent"
                android:padding="10dp"
                android:text="@string/approve"
                app:cornerRadius="50dp"
                app:layout_constraintTop_toBottomOf="@id/tlComments"
                app:layout_constraintEnd_toEndOf="parent"

               app:layout_constraintStart_toEndOf="@id/vguideline" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>