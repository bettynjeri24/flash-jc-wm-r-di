<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@mipmap/bg"
    android:backgroundTint="@color/colorDivider"
    >
    <include
        layout="@layout/transfer_layout_top"
        android:id="@+id/mainLayoutToolbar"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:elevation="@dimen/medium_side"
        app:cardCornerRadius="@dimen/medium_side"
        android:layout_margin="@dimen/main_top"
        android:translationY="-45dp"
        app:cardBackgroundColor="@color/color_white"
        app:layout_constraintTop_toBottomOf="@id/mainLayoutToolbar">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="@dimen/medium_side"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:id="@+id/cardview"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/medium_side"
            android:background="@android:color/transparent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/medium_side"
                android:paddingRight="@dimen/medium_side">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Evans Gangla"
                    android:fontFamily="@font/nunito_sans_semibold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textColor="@color/primary_green"
                    android:id="@+id/tvProviderName"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    app:layout_constraintTop_toBottomOf="@id/tvProviderName"
                    android:background="@color/white_gray"
                    android:id="@+id/vProvider"
                    android:layout_marginTop="@dimen/margin_padding_small"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="@dimen/medium_side"
                    android:text="Phone Number: 115615510515354"
                    android:id="@+id/tvAccountNo"
                    android:textColor="@color/txtGray"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:paddingBottom="@dimen/margin_padding_small"
                    app:layout_constraintTop_toBottomOf="@id/vProvider"
                    android:fontFamily="@font/nunito_sans"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/medium_side"
                    android:text="Type: Telco"
                    android:id="@+id/tv_channelType"
                    android:textColor="@color/txtGray"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/margin_padding_small"
                    android:paddingBottom="@dimen/margin_padding_small"
                    app:layout_constraintTop_toBottomOf="@id/vProvider"
                    android:fontFamily="@font/nunito_sans"/>


               
                <ImageView
                    android:id="@+id/imgChannel"
                    android:layout_width="60dp"
                    android:layout_height="50dp"
                    android:padding="5dp"
                    android:src="@drawable/orange_money"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAccountNo"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   app:layout_constraintLeft_toRightOf="@id/imgChannel"
                    app:layout_constraintTop_toTopOf="@id/tv_channelType"
                    android:textSize="13sp"
                    android:textColor="@color/black"
                    android:id="@+id/tvChannelName"
                    android:paddingBottom="@dimen/medium_side"
                    android:layout_marginTop="@dimen/main_top"
                   
                    android:text="Orange-Money"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/main_side"
            app:layout_constraintTop_toBottomOf="@id/cardview"
            style="@style/MyTextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAirtimeAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/enter_amount"
                android:imeOptions="actionNext"
                android:maxLength="6"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="charges: "
            app:layout_constraintTop_toBottomOf="@id/tlAmount"
            android:layout_marginTop="@dimen/medium_side"
            android:id="@+id/tvCharges"

            app:layout_constraintEnd_toEndOf="@id/tlAmount"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: 2500"
            app:layout_constraintTop_toBottomOf="@id/tvCharges"
            android:layout_marginTop="@dimen/medium_side"
            android:id="@+id/tvTotalAmount"
            android:visibility="gone"
            android:textSize="@dimen/textsize_large"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="@id/tlAmount"/>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlComments"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTotalAmount"
            style="@style/MyTextInputLayout"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etComments"
                android:layout_width="match_parent"
                android:layout_height="@dimen/tv_comments_height"
                android:hint="@string/enter_comments"
                android:imeOptions="actionNext"
                android:inputType="textMultiLine" />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnBuyAirtime"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/main_top"
            android:layout_marginBottom="50dp"
            android:paddingBottom="@dimen/main_top"
            android:padding="10dp"
            android:text="@string/transfer"
            app:cornerRadius="50dp"
            app:layout_constraintTop_toBottomOf="@id/tlComments"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/primary_button"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>