<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/main_side">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#DDDDDD"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/main_side"
        android:layout_marginTop="@dimen/main_side"
        android:layout_marginEnd="@dimen/small_margin"
        android:ellipsize="end"
        android:fontFamily="@font/nunito_sans"
        android:lines="1"
        android:text="Oscar M"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="Station: Kaemba"
        android:textColor="#8B9898"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@id/tv_amount"
        app:layout_constraintStart_toStartOf="@id/tv_transaction"
        app:layout_constraintTop_toBottomOf="@id/tv_transaction"
        tools:text="235 678" />

    <TextView
        android:id="@+id/tv_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_side"
        android:drawablePadding="@dimen/small_margin"
        android:fontFamily="@font/nunito_sans_semibold"
        android:gravity="center_vertical"
        android:text="- 565.720,30  CFA"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="12sp"
        app:drawableStartCompat="@drawable/ic_arrow_up"
        app:drawableTint="@android:color/holo_green_light"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/main_side"
        android:drawablePadding="@dimen/main_side"
        android:fontFamily="@font/nunito_sans_semibold"
        android:text="mardi, 18 avril"
        android:textColor="#8B9898"
        android:textSize="10sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_amount" />

</androidx.constraintlayout.widget.ConstraintLayout>