<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.buyerprofile.dashboard.BuyerRecentTranaction">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_transaction"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/curved_bg"
        android:paddingStart="@dimen/main_side"
        android:paddingEnd="@dimen/main_side"
        android:paddingTop="@dimen/medium_side"
        android:layout_marginTop="@dimen/medium_side"
       app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/tv_recent_transactions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/recent_transactions"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/medium_side"
            android:layout_marginTop="@dimen/medium_side"
            android:textColor="#9B9B9B"/>

        <TextView
            android:id="@+id/tv_view_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/view_all"
            android:textSize="10sp"
            android:textAllCaps="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/medium_side"
            android:layout_marginStart="@dimen/medium_side"
            android:layout_marginTop="@dimen/medium_side"
            android:textColor="#04A653"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_transactins"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            android:layout_marginTop="@dimen/medium_side"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/adapter_transactions"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_transactions"
            android:layout_height="0dp" />

        <TextView
            android:layout_width="match_parent"

            app:layout_constraintTop_toBottomOf="@id/tv_recent_transactions"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"

            android:textColor="@color/black"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:layout_margin="@dimen/main_side"
            android:text="@string/no_transaction_list"
            android:textSize="@dimen/textsize_vlarge"
            android:fontFamily="@font/nunito_sans_semibold"
            android:id="@+id/tvErrorResponse"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvPaybills"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_marginTop="@dimen/medium_side"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/adapter_transactions"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_transactions"
            android:layout_height="0dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcvFTMenu"
            android:layout_width="match_parent"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            android:layout_marginTop="@dimen/medium_side"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:listitem="@layout/adapter_transactions"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/tv_recent_transactions"
            android:layout_height="0dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>