<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:elevation="@dimen/medium_side"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/main_side"
    android:layout_marginStart="@dimen/main_side"
    android:layout_marginEnd="@dimen/main_side"
    app:cardCornerRadius="@dimen/landing_card_radius"
    android:background="@color/color_white"
    app:cardBackgroundColor="@color/color_white"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintTop_toTopOf="parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/medium_side">
    <View
        android:layout_width="4dp"
        android:layout_height="@dimen/submenu_view"
        android:background="@color/primary_green"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/ivAccountIcon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:padding="@dimen/medium_side"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/mtnmoney" />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="16dp"
        android:id="@+id/imgnext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/circle_green_bg"
        android:src="@drawable/ic_baseline_arrow_forward_24"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Evans Gangla"
        android:fontFamily="@font/nunito_sans_semibold"
       app:layout_constraintEnd_toStartOf="@id/imgnext"
        android:textColor="@color/black"
       android:gravity="start"
        android:id="@+id/tvName"
        android:layout_marginTop="@dimen/medium_side"
        android:layout_marginStart="@dimen/medium_side"
        app:layout_constraintStart_toEndOf="@+id/ivAccountIcon"
        app:layout_constraintTop_toTopOf="@+id/ivAccountIcon" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Phone number - 225708396044"
        android:fontFamily="@font/nunito_sans_semibold"
        android:gravity="start"
        android:id="@+id/tvPhoneNumber"
       app:layout_constraintTop_toBottomOf="@id/tvName"
        app:layout_constraintStart_toStartOf="@id/tvName"
        app:layout_constraintEnd_toEndOf="@id/tvName"/>
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Added:mardi, 18 avril"
        android:fontFamily="@font/nunito_sans_semibold"
        android:gravity="start"
        android:id="@+id/tvCreationDate"
        android:layout_marginEnd="@dimen/medium_side"
        android:layout_marginBottom="@dimen/medium_side"
        app:layout_constraintTop_toBottomOf="@id/tvPhoneNumber"
        app:layout_constraintStart_toStartOf="@id/tvPhoneNumber"
        app:layout_constraintEnd_toEndOf="@id/tvName"/>
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>