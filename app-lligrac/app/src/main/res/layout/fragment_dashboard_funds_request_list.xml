<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white_gray"
    >


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans_bold"
        android:text="@string/buyer_fund_requests"
        android:textColor="#013E4E"
        android:textSize="@dimen/textsize_target"
        android:layout_marginStart="@dimen/main_side"
        android:layout_marginEnd="@dimen/main_side"
        android:layout_marginTop="@dimen/medium_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvViewAll"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nunito_sans"
        android:text="@string/view_all"
        android:textColor="#04A653"
        android:layout_marginStart="@dimen/main_side"
        android:layout_marginEnd="@dimen/main_side"
        android:layout_marginTop="@dimen/medium_side"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />



    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvBuyers"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/medium_side"
        android:layout_marginEnd="@dimen/medium_side"
        android:layout_marginTop="@dimen/medium_side"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/adapter_buyer_fundsrequest" />
</androidx.constraintlayout.widget.ConstraintLayout>