<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
       >


        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="paired_devices"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewPath"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView4"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <RadioGroup
            android:id="@+id/radioGroupOpen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_above="@+id/buttonOpenFromDeviceStorage"
            android:layout_alignParentLeft="true" >

            <RadioButton
                android:id="@+id/radioDeviceStorage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="device_storage" />

            <RadioButton
                android:id="@+id/radioProjectResources"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="project_resources" />
        </RadioGroup>

        <Button
            android:id="@+id/buttonOpenFromDeviceStorage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textViewPath"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="open_from_device_storage" />

        <ListView
            android:id="@+id/listViewPairedDevices"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutPrintDetails"
            android:layout_below="@+id/textView"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/activity_vertical_margin" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/buttonsPrinter"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:text="number_0" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignParentEnd="true"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:text="number_100" />

        <SeekBar
            android:id="@+id/seekBarBrightness"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/textView2"
            android:layout_alignEnd="@+id/textView3"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/textView3"
            android:max="100"
            android:progress="50" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/seekBarBrightness"
            android:layout_centerHorizontal="true"
            android:text="brightness"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textViewProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:text="number_50" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/radioGroupOpen"
            android:layout_centerHorizontal="true"
            android:text="open_from"
            android:visibility="gone"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <include
            android:id="@+id/layoutPrintDetails"
            layout="@layout/printer_confirm_printdetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_above="@+id/buttonsPrinter" />
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/buttonsPrinter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">

            <Button
                android:layout_weight="1"
                android:id="@+id/buttonOpenPrinter"
                android:layout_width="0dp"
                android:layout_marginEnd="@dimen/main_top"
                android:layout_height="wrap_content"
                android:text="Connect" />

            <Button
                android:layout_weight="1"
                android:id="@+id/buttonPrint"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="print" />


        </LinearLayout>

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>