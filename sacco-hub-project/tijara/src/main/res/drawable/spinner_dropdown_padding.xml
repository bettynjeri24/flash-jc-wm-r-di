<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>

                <corners android:radius="5dp" />
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="@dimen/_10dp"
                    android:top="2dp" />
                <stroke
                    android:width="1dp"
                    android:color="#979191"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right"
                android:src="@drawable/drop_arrow"
                android:tint="@color/black"
                />

        </item>
    </layer-list></item>
</selector>