<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item><layer-list>
        <item>
            <shape>

                <corners android:radius="12dp" />
                <padding
                    android:bottom="2dp"
                    android:left="2dp"
                    android:right="10dp"
                    android:top="2dp" />
                <stroke
                    android:width="1dp"
                    android:color="#979191"/>
            </shape>
        </item>
        <item >
            <bitmap android:gravity="center|right"
                android:src="@drawable/drop_arrow"
                />

        </item>
    </layer-list></item>
</selector>