<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="billerItems"
            type="com.ekenya.rnd.tijara.network.model.BillerData" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardBiller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_80dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_65dp"
            android:layout_marginBottom="@dimen/_4dp"
            android:background="?android:attr/selectableItemBackground"
            android:id="@+id/Cl_Merchants"
            >
            <View
                android:id="@+id/viewLine"
                android:layout_width="@dimen/_2dp"
                android:layout_height="@dimen/_60dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_4dp"
                android:paddingBottom="@dimen/_4dp"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@color/buttonColor"/>
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/group_icon"
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:layout_marginStart="@dimen/_20dp"
                android:background="@drawable/white_circle_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="22dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:visibility="gone"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_zukuIcon"
                app:layout_constraintEnd_toEndOf="@+id/iv_zukuIcon"
                app:layout_constraintStart_toStartOf="@+id/iv_zukuIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_zukuIcon"
                tools:text="DM" />

            <ImageView
                android:id="@+id/iv_zukuIcon"
                android:layout_width="@dimen/_60dp"
                android:layout_height="@dimen/_60dp"
                tools:src="@drawable/kplc"
                android:layout_marginStart="@dimen/_20dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_titleHolder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="@string/loan_repayment"
                android:textSize="@dimen/_14sp"
                android:layout_marginStart="@dimen/_25dp"

                app:layout_constraintBottom_toBottomOf="@+id/iv_imageHolder"
                app:layout_constraintStart_toEndOf="@+id/iv_zukuIcon"
                app:layout_constraintTop_toTopOf="@+id/iv_imageHolder"
               />

            <ImageView
                android:id="@+id/iv_imageHolder"
                android:layout_width="@dimen/_30dp"
                android:layout_height="@dimen/_30dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/bank_arrow"
                app:tint="@color/hintColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>