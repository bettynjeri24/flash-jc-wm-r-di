<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:background="@color/textColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_40dp"
                android:minHeight="?attr/actionBarSize"
                android:theme="?attr/actionBarTheme"
                app:titleTextColor="@color/white" >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/iv_user"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginStart="@dimen/_20dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/unselected_background"
                        android:src="@drawable/user_pic"/>
                    <TextView
                        android:id="@+id/tv_hi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_user"
                        android:layout_marginEnd="2dp"
                        android:textSize="@dimen/_14sp"
                        android:layout_marginStart="@dimen/_3dp"
                        android:text="Hi, "
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/tv_hi"
                        android:layout_marginEnd="10dp"
                        android:textSize="@dimen/_14sp"
                        android:layout_marginStart="@dimen/_3dp"
                        tools:text="Dams"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/iv_user"
                        android:layout_below="@id/tv_user_name"
                        android:layout_marginStart="@dimen/_3dp"
                        android:textSize="@dimen/_10sp"
                        android:text="Last logged: "
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/login_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_toEndOf="@id/log"
                        android:layout_below="@id/tv_user_name"
                        android:layout_marginStart="@dimen/_3dp"
                        android:textSize="@dimen/_10sp"
                        tools:text="8:45am"

                        android:textColor="@color/white"
                        />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/_24dp"
                        android:src="@drawable/notification"/>

                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/_50dp"
        android:paddingBottom="@dimen/_50dp"
        tools:context=".ui.homepage.home.dashboard.DashboardFragment">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/textColor"/>
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.13" />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager_dashboard"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:orientation="vertical"/>
       <!-- android:background="@drawable/btn_white_bg"-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabDots_dash"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            app:layout_constraintTop_toBottomOf="@+id/pager_dashboard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:backgroundTintMode="screen"
            android:layout_marginTop="@dimen/_10dp"
            app:tabBackground="@drawable/tab_selector"
            app:tabGravity="center"
            app:tabIndicatorHeight="0dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tabDots_dash">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_deposit"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_marginStart="@dimen/_18dp"
                android:background="@drawable/btn_normal_bg"
                android:text="@string/make_deposit"
                app:layout_constraintTop_toTopOf="parent"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"
                android:layout_marginEnd="@dimen/_2dp"
                app:layout_constraintEnd_toStartOf="@+id/btn_view_summary"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_summary"
                android:layout_width="0dp"
                android:layout_height="37dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/_18dp"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@drawable/btn_less_radius"
                app:layout_constraintTop_toTopOf="@+id/btn_deposit"
                android:text="@string/account_summary"
                android:textAllCaps="false"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_deposit" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cl_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="27dp"
            tools:itemCount="1"
            tools:listitem="@layout/fragment_dashboard_items_list"
            />
