<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_60dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        >


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/Constraint_Loan"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/_4dp"
        android:layout_height="match_parent">
        <View
            android:id="@+id/viewLine"
            android:layout_width="@dimen/_5dp"
            android:layout_height="@dimen/_60dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_4dp"
            android:paddingBottom="@dimen/_4dp"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/buttonColor"/>

        <TextView
            android:id="@+id/tv_loanOption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/viewLine"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Loan Option"
            android:textSize="@dimen/_20sp"
            android:layout_marginStart="@dimen/_15dp"
            android:textColor="@color/black"/>
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_loanOption"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/_11dp"
            app:layout_constraintTop_toTopOf="@+id/tv_loanOption"
            app:srcCompat="@drawable/bank_arrow" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>