<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_10dp"
            android:fontFamily="@font/poppins"
            android:text="@string/profile_photo"
            android:textSize="@dimen/_16sp"
            android:textColor="@color/hintColor"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_gallery"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="@dimen/_40dp"
            android:background="@drawable/icon_bacground_colored"
            android:padding="@dimen/_15dp"
            android:src="@drawable/choose_pic"
            app:layout_constraintBottom_toBottomOf="@+id/iv_cam"
            app:layout_constraintStart_toEndOf="@+id/iv_cam"
            app:layout_constraintTop_toTopOf="@+id/iv_cam"
            app:tint="@color/white" />

        <TextView
            android:id="@+id/tv_gallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"
            android:text="Gallery"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_gallery"
            app:layout_constraintStart_toStartOf="@+id/iv_gallery"
            app:layout_constraintTop_toBottomOf="@+id/iv_gallery" />

        <ImageView
            android:id="@+id/iv_cam"
            android:layout_width="@dimen/_50dp"
            android:layout_height="@dimen/_50dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="35dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/icon_bacground_colored"
            android:padding="@dimen/_15dp"
            android:src="@drawable/ic_camera"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView"
            app:tint="@color/white" />
        <TextView
            android:id="@+id/tv_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/hintColor"
            android:text="Camera"
            android:textSize="@dimen/_14sp"
            app:layout_constraintEnd_toEndOf="@+id/iv_cam"
            app:layout_constraintStart_toStartOf="@+id/iv_cam"
            app:layout_constraintTop_toBottomOf="@+id/iv_cam" />



    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>