<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="guarantors"
            type="com.ekenya.rnd.tijara.network.model.NewLoanGuaranteData" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/requestList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/_20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ClGuarantors"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_loan"
                android:layout_width="@dimen/_32dp"
                android:layout_height="32dp"
                android:layout_marginStart="16dp"
                android:src="@mipmap/app_logo"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvLoantitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14sp"
                android:layout_toEndOf="@id/iv_loan"
                app:layout_constraintStart_toEndOf="@id/iv_loan"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Personal Loan" />
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14sp"
                android:layout_toEndOf="@id/iv_loan"
                app:layout_constraintEnd_toStartOf="@id/iv_back"
                app:layout_constraintTop_toTopOf="@+id/tvLoantitle"
                app:layout_constraintBottom_toBottomOf="@+id/tvLoantitle"
                tools:text="Personal Loan" />

            <TextView
                android:id="@+id/text_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_13sp"
                tools:text="DAmAris"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="@+id/tvLoantitle"
                app:layout_constraintTop_toBottomOf="@+id/tvLoantitle" />

            <TextView
                android:id="@+id/tv_percentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/black"
                app:layout_constraintBottom_toBottomOf="@+id/text_limit"
                app:layout_constraintStart_toStartOf="@id/tvAmount"
                app:layout_constraintTop_toTopOf="@+id/text_limit"
                tools:text="3 years" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_8dp"
                android:layout_height="@dimen/_15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/_15dp"
                android:src="@drawable/ic_back_loans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>