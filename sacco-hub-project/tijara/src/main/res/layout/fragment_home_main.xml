<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_140dp"
        android:background="@color/textColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/mToolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp"
                android:layout_marginStart="@dimen/_5dp"
                app:titleTextColor="@color/white" >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:paddingBottom="@dimen/_15dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:id="@+id/iv_Logo"
                        android:layout_width="97dp"
                        android:layout_height="@dimen/_40dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginStart="@dimen/_3dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:src="@drawable/tijara_white_logo"/>
                    <TextView
                        android:id="@+id/tv_welcome"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:layout_marginStart="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_Logo"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="@string/welcome_user"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/tv_sacco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/tv_welcome"
                        app:layout_constraintStart_toStartOf="@+id/tv_welcome"
                        tools:text="Dams"
                        android:textColor="@color/white"
                        />
                    <TextView
                        android:id="@+id/login_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_sacco"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_sacco"
                        tools:text="8:45am"
                        android:textColor="@color/white"
                        />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
       >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_50dp"
        android:paddingBottom="@dimen/_50dp"
        tools:context=".ui.homepage.home.dashboard.HomeMainFragment">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/mainCard"
            android:layout_width="match_parent"
            android:background="@color/home_color"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_viewPager"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_width="wrap_content"
                android:layout_marginTop="@dimen/_5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textColor="@color/white"
                android:text="What would you like to do today?"
                android:textSize="@dimen/_14sp"
                android:layout_height="wrap_content"/>
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/pager_dashboard"
                android:layout_width="match_parent"
                android:layout_height="148dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_viewPager"
                app:layout_constraintStart_toStartOf="parent"
               />
            <androidx.cardview.widget.CardView
                android:id="@+id/cardLoader"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="@+id/pager_dashboard"
                app:layout_constraintTop_toTopOf="@+id/pager_dashboard">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:background="@drawable/cardview_image"

                    android:layout_height="match_parent">
                    <com.github.ybq.android.spinkit.SpinKitView
                        android:id="@+id/spinkit"
                        style="@style/SpinKitView.Large.ThreeBounce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        app:SpinKit_Color="@color/buttonColor"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                       />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tabDots_dash"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintTop_toBottomOf="@+id/pager_dashboard"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTintMode="screen"
                android:background="@color/home_color"
                android:layout_marginTop="@dimen/_5dp"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mainCard"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:background="@drawable/bg_radius"
            android:layout_marginTop="20dp"
            tools:itemCount="1"
            tools:listitem="@layout/fragment_dashboard_items_list"
            />
        <androidx.viewpager.widget.ViewPager
            android:id="@+id/pager"
            android:layout_width="match_parent"
            android:layout_height="125dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintTop_toBottomOf="@id/rv_data"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>