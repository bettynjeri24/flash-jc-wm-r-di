<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="wViewModel"
            type="com.ekenya.rnd.tijara.ui.homepage.home.userprofile.signup.WorkDetailsViewModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/main_toolbar">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/work_details"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/_20dp"/>
                <ImageView
                    android:id="@+id/iv_cancel"
                    android:layout_width="@dimen/_25dp"
                    android:layout_height="@dimen/_25dp"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:src="@drawable/ic_cancel"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/ll_bank_details"
            android:layout_below="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/_50dp"
            android:orientation="vertical"
            >
            <include
                android:id="@+id/progressbar"
                android:visibility="gone"
                layout="@layout/colored_progressbar"
                />
        <Spinner
            android:id="@+id/emp_spinner"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_height="@dimen/_55dp"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@drawable/spinner_background"
            />
        <Spinner
            android:id="@+id/empTerm_spinner"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_height="@dimen/_55dp"
            android:layout_below="@+id/emp_spinner"
            android:textAlignment="textStart"
            android:layout_marginTop="@dimen/_12dp"
            android:background="@drawable/spinner_background"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_employee"
            android:layout_width="match_parent"
            android:hint="@string/employee_number"
            app:endIconMode="clear_text"
            android:layout_height="wrap_content"
            android:layout_below="@+id/empTerm_spinner"
            android:layout_marginTop="@dimen/_12dp"
            style="@style/OutlineStyle"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_employee"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLength="30"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_departmnt"
            android:layout_width="match_parent"
            android:hint="@string/department"
            android:layout_below="@+id/tl_employee"
            android:layout_marginTop="@dimen/_12dp"
            app:endIconMode="clear_text"
            android:layout_height="wrap_content"
            style="@style/OutlineStyle"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_departmnt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLength="30"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_work_station"
            android:layout_width="match_parent"
            android:hint="@string/work_station"
            android:layout_below="@+id/tl_departmnt"
            android:layout_marginTop="@dimen/_12dp"
            app:endIconMode="clear_text"
            android:layout_height="wrap_content"
            style="@style/OutlineStyle"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_work_station"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="text"
                android:maxLength="30"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                />
        </com.google.android.material.textfield.TextInputLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tl_work_station"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="@dimen/_30dp">
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/save"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            app:disableButton="@{wViewModel.responseStatus}"
            android:layout_marginEnd="@dimen/_3dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            android:theme="@style/ButtonTheme"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="@dimen/_40dp"
            android:background="@drawable/btn_less_radius"
            android:text="@string/cancel"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold"
            android:theme="@style/ButtonTheme"
            android:layout_marginStart="@dimen/_3dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_save"

            />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </RelativeLayout>
    </RelativeLayout>
</layout>