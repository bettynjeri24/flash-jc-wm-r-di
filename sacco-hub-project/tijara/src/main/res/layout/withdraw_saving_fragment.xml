<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="withdrawViewModel"
            type="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.WithdrawSavingViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:background="@color/textColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/custom_toolbar"
                android:layout_width="match_parent"
                android:visibility="visible"
                app:layout_collapseMode="pin"
                android:background="@color/textColor"
                android:layout_height="?attr/actionBarSize"
                >
                <include
                    android:id="@+id/toolbar"
                    layout="@layout/custom_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:paddingBottom="@dimen/_60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.homepage.home.dashboard.WithdrawSavingFragment">
        <TextView
            android:id="@+id/tv_textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_30dp"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/how_much_would_you_like_to_withdraw"
            android:textColor="@color/buttonColor"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlEnterAmount"
            android:layout_width="match_parent"
            android:hint="@string/amount"
            android:layout_marginTop="@dimen/_9dp"
            app:endIconMode="clear_text"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_textTitle"
            style="@style/OutlineStyle"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_amount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLength="50"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:id="@+id/tv_selectAcc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@+id/tlEnterAmount"
            android:text="@string/select_account"
            android:textColor="@color/buttonColor"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/accountSpinner"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginTop="@dimen/_12dp"
            android:theme="@style/spinnerTheme"
            android:layout_height="@dimen/_55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_selectAcc"
            android:textAlignment="textStart"
            android:background="@drawable/spinner_background"
            />
        <TextView
            android:id="@+id/tv_selectProvider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@+id/accountSpinner"
            android:text="@string/service_provider"
            android:textColor="@color/buttonColor"/>

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/providerSpinner"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            android:layout_marginTop="@dimen/_12dp"
            android:theme="@style/spinnerTheme"
            android:layout_height="@dimen/_55dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_selectProvider"
            android:textAlignment="textStart"
            android:background="@drawable/spinner_background"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@+id/providerSpinner"
            android:text="@string/phone_number"
            android:textColor="@color/buttonColor"/>
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlPhone"
            android:layout_width="match_parent"
            android:hint="@string/mobile_number"
            android:layout_marginTop="@dimen/_9dp"
            app:endIconMode="clear_text"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_phone"
            style="@style/OutlineStyle"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLength="50"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnWithdraw"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:theme="@style/ButtonTheme"
            android:layout_marginTop="@dimen/_30dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/withdraw"
            android:textAllCaps="true"
            app:disableButton="@{withdrawViewModel.responseStatus}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_30dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>