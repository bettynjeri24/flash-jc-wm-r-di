<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="mobileData"
            type="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.MobileMoneyViewmodel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:paddingBottom="@dimen/_20dp"
        android:layout_height="match_parent">

        <View
            android:id="@+id/viewB"
            android:layout_width="69dp"
            android:layout_height="@dimen/_5dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_15dp"
            android:background="@color/etColor"
            app:layout_constraintCircleRadius="@dimen/_5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/tv_sOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send Money To"
            android:textColor="@color/textColor"
            android:layout_marginTop="@dimen/_20dp"
            android:textSize="@dimen/_14sp"
            app:layout_constraintTop_toBottomOf="@+id/viewB"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mobile"
            android:layout_width="match_parent"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_sOne"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:itemCount="2"
            app:listmobileMoney="@{mobileData.mobiledetails}"
            tools:listitem="@layout/mobile_money_list_item"
            android:layout_height="wrap_content" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>