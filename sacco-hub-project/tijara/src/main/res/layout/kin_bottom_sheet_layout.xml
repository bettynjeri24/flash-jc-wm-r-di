<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="kinViewModel"
            type="com.ekenya.rnd.tijara.ui.homepage.home.userprofile.signup.NextKinViewModel" />

    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/main_toolbar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/next_of_kin"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:textSize="@dimen/_14sp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/_20dp"/>
                    <ImageView
                        android:id="@+id/iv_cancel"
                        android:layout_width="@dimen/_25dp"
                        android:layout_height="@dimen/_25dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="@dimen/_20dp"
                        android:src="@drawable/ic_cancel"/>
                </RelativeLayout>
            </androidx.appcompat.widget.Toolbar>
        <RelativeLayout
            android:id="@+id/ll_kin_details"
            android:layout_below="@+id/main_toolbar"
            app:layout_constraintTop_toBottomOf="@+id/main_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="@dimen/_50dp"
            android:orientation="vertical"

            >


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_full_name"
                android:layout_width="match_parent"
                android:hint="@string/full_names"
                android:layout_marginTop="@dimen/_30dp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                app:endIconMode="clear_text"
                android:layout_height="wrap_content"
                style="@style/OutlineStyle">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_full_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <Spinner
                android:id="@+id/rship_spinner"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_height="@dimen/_55dp"
                android:layout_below="@+id/tl_full_name"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/spinner_background"
                />
            <Spinner
                android:id="@+id/spinnerGender"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_height="@dimen/_55dp"
                android:layout_below="@+id/rship_spinner"
                android:textAlignment="textStart"
                android:layout_marginTop="@dimen/_10dp"
                android:background="@drawable/spinner_background"
                />
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_kin_id"
                android:layout_width="match_parent"
                android:hint="@string/valid_id_number"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_below="@+id/spinnerGender"
                app:endIconMode="clear_text"
                android:layout_height="wrap_content"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kin_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_kin_phoneNo"
                android:layout_width="match_parent"
                android:hint="@string/phone_number"
                android:layout_marginTop="@dimen/_10dp"
                app:endIconMode="clear_text"
                android:layout_below="@+id/tl_kin_id"
                android:layout_height="wrap_content"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kin_phoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_kin_email"
                android:layout_below="@+id/tl_kin_phoneNo"
                android:layout_width="match_parent"
                android:hint="@string/email_address"
                android:layout_marginTop="@dimen/_10dp"
                app:endIconMode="clear_text"
                android:layout_height="wrap_content"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_kin_email"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textEmailAddress"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlDob"
                style="@style/OutlineStyle"
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/_3dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tl_kin_email"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                app:errorTextColor="@color/textColor"
                android:hint="@string/date_of_birth"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_dob"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    android:inputType="date"
                    android:focusable="false"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_allocation"
                android:layout_width="match_parent"
                android:hint="@string/allocation"
                android:layout_marginTop="@dimen/_10dp"
                app:endIconMode="clear_text"
                android:layout_below="@+id/tlDob"
                android:layout_height="wrap_content"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_allocation"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="phone"
                    android:maxLength="30"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tl_allocation"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="@dimen/_30dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="40dp"
                app:disableButton="@{kinViewModel.responseStatus}"
                android:background="@drawable/btn_normal_bg"
                android:text="@string/save"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"
                app:layout_constraintEnd_toStartOf="@+id/btn_cancel"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="@dimen/_40dp"
                android:background="@drawable/btn_less_radius"
                android:text="@string/cancel"
                android:textColor="@color/textColor"
                android:layout_marginStart="@dimen/_3dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@+id/btn_save"
                android:textSize="@dimen/_12sp"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"

                />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RelativeLayout>
            <include
                android:id="@+id/progressbar"
                layout="@layout/colored_progressbar"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_height="0dp"
                android:visibility="gone"
                android:layout_width="match_parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>