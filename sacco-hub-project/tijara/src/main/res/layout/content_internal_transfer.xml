<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/internal_transfer_fragment"
        >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnTransfer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingBottom="@dimen/_10dp">
                <TextView
                    android:id="@+id/tv_textTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:text="@string/how_much_fund_would_you_like_to_transfer"
                    android:textColor="@color/buttonColor"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlEnterAmount"
                    android:layout_width="match_parent"
                    android:hint="@string/amount"
                    android:layout_marginTop="@dimen/_20dp"
                    app:endIconMode="clear_text"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_textTitle"
                    style="@style/OutlineStyle"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/cursor"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_3dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tlEnterAmount">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <RadioButton
                            android:id="@+id/rb_myself"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:button="@null"
                            android:checked="true"
                            android:drawableStart="@drawable/radio_button_state_icon"
                            android:drawablePadding="@dimen/_15dp"
                            android:padding="@dimen/_10dp"
                            android:paddingStart="@dimen/_15dp"
                            android:text="Self-Transfer"
                            android:textColor="@color/radio_button_text_color"
                            android:textSize="@dimen/_14sp"
                            app:layout_constraintEnd_toStartOf="@+id/rb_others"
                            app:layout_constraintHorizontal_chainStyle="packed"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <RadioButton
                            android:id="@+id/rb_others"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_40dp"
                            android:button="@null"
                            android:checked="false"
                            android:drawableStart="@drawable/radio_button_state_icon"
                            android:drawablePadding="@dimen/_15dp"
                            android:paddingStart="@dimen/_15dp"
                            android:text="Member Transfer"
                            android:textColor="@color/radio_button_text_color"
                            android:textSize="@dimen/_14sp"
                            app:layout_constraintStart_toEndOf="@+id/rb_myself"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RadioGroup>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/CLSELFTRANSFER"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_selectAcc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="@string/transfer_from"
                        android:textColor="@color/bluer"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiTypespFrom"
                        style="@style/exposedDropdownMenuCustom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        app:endIconTint="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_selectAcc">
                        <AutoCompleteTextView
                            android:id="@+id/spFrom"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_account"
                            android:textColor="@color/hintColor"
                            />
                    </com.google.android.material.textfield.TextInputLayout>
                    <TextView
                        android:id="@+id/tv_selectProvider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_10dp"
                        app:layout_constraintTop_toBottomOf="@+id/tiTypespFrom"
                        android:text="@string/transfer_to"
                        android:textColor="@color/bluer"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiTypespTo"
                        style="@style/exposedDropdownMenuCustom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        app:endIconTint="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_selectProvider">
                        <AutoCompleteTextView
                            android:id="@+id/spTo"
                            android:layout_width="match_parent"
                            android:focusable="false"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_account"
                            android:textColor="@color/hintColor"
                            />
                    </com.google.android.material.textfield.TextInputLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/CLMEMBERTRANSFER"
                    android:layout_width="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintTop_toBottomOf="@+id/radioGroup"
                    android:layout_height="wrap_content">
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tlAcNumber"
                        android:layout_width="match_parent"
                        android:hint="@string/account_number"
                        android:layout_marginTop="@dimen/_20dp"
                        app:endIconMode="clear_text"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        style="@style/OutlineStyle"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        >
                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_accNumber"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="text"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textCursorDrawable="@drawable/cursor"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                    <TextView
                        android:id="@+id/tv_transferFromr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginTop="@dimen/_20dp"
                        app:layout_constraintTop_toBottomOf="@+id/tlAcNumber"
                        android:text="@string/transfer_from"
                        android:textColor="@color/bluer"/>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tiTypeFrom"
                        style="@style/exposedDropdownMenuCustom"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_10dp"
                        app:endIconTint="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_transferFromr">
                        <AutoCompleteTextView
                            android:id="@+id/spinnerTFrom"
                            android:focusable="false"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="@string/select_account"
                            android:textColor="@color/hintColor"
                            />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTransfer"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_15dp"
            android:theme="@style/ButtonTheme"
            android:layout_marginEnd="@dimen/_15dp"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/continu"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_30dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>