<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="billerViewmodel"
            type="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.billpayment.BillersViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/custom_toolbar"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    app:contentInsetEnd="0dp"
                    app:contentInsetStart="0dp"
                    app:theme="@style/AppTheme.Toolbar"
                    android:layout_height="@dimen/_150dp"
                    >
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/backButton"
                            android:layout_width="@dimen/_30dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:contentDescription="@string/back"
                            android:src="@drawable/ic_baseline_arrow_back_24"
                            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="@+id/currentToolbarTitle" />

                        <TextView
                            android:id="@+id/currentToolbarTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="30dp"
                            android:layout_toEndOf="@+id/backButton"
                            android:fontFamily="@font/poppins"
                            android:textColor="@color/white"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:textSize="14sp"
                            app:layout_constraintBottom_toTopOf="@id/search"
                            app:layout_constraintStart_toEndOf="@+id/backButton"
                            android:text= "@string/billers" />
                        <androidx.appcompat.widget.SearchView
                            android:id="@+id/search"
                            android:layout_width="match_parent"
                            android:theme="@style/SearchViewTheme"
                            android:background="@drawable/white_bg_corned"
                            android:layout_height="wrap_content"
                            app:queryBackground="@android:color/transparent"
                            app:iconifiedByDefault="false"
                            app:queryHint="@string/search_for_a_bill"
                            app:showDividers="none"
                            app:defaultQueryHint="@string/search_for_a_bill"
                            android:layout_marginStart="@dimen/_10dp"
                            android:layout_marginEnd="@dimen/_20dp"
                            android:layout_marginBottom="@dimen/_10dp"
                            android:textCursorDrawable="@drawable/cursor"
                            android:layout_marginTop="@dimen/_15dp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_60dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.homepage.home.dashboard.billpayment.BillersFragment">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_billerCategories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:listCatBillers="@{billerViewmodel.billCatList}"
                android:layout_marginEnd="@dimen/_10dp"
                android:layout_marginTop="@dimen/_10dp"
                tools:itemCount="2"
                tools:listitem="@layout/biller_categories_list"
                />


            <TextView
            android:id="@+id/tv_billers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/billers"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/_15dp"
            android:textSize="@dimen/_16sp"
            app:layout_constraintTop_toBottomOf="@+id/rv_billerCategories"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/NoBillers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30dp"
                android:visibility="gone"
                app:emptyList="@{billerViewmodel.isEmpty()}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_billers">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@drawable/ic_no_share"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20dp"
                    android:text="No Billers Found"
                    android:textColor="#707070"
                    android:textSize="@dimen/_13sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageView7" />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_billers"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:notEmptyListConstraint="@{billerViewmodel.isVisible()}"
                android:layout_height="wrap_content">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_biller"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:paddingBottom="@dimen/_60dp"
                    android:layout_marginBottom="@dimen/_60dp"
                    android:layout_marginTop="@dimen/_10dp"
                    tools:itemCount="2"
                    tools:listitem="@layout/merchants_items_lists"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.github.ybq.android.spinkit.SpinKitView
                android:id="@+id/spinkit"
                style="@style/SpinKitView.Large.ThreeBounce"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:visibility="gone"
                app:SpinKit_Color="@color/buttonColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:btnclickLoading="@{billerViewmodel.responseStatus}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
            />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>