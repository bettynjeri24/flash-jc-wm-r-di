<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
<variable
    name="vUserViewmodel"
    type="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.VerifyUserViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/buttonColor">

            <TextView
                android:id="@+id/welcome_back"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:elevation="16dp"
                android:gravity="center"
                android:text="               Enter pin to continue                 "
                android:textColor="@color/white" />
        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tl_pass"
            style="@style/OutlineStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_20dp"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginBottom="@dimen/_20dp"
            android:hint="@string/pin"
            app:endIconMode="password_toggle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="number"
                android:maxLength="50"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.github.ybq.android.spinkit.SpinKitView
            android:id="@+id/smooth_dialog"
            style="@style/SpinKitView.Large.ThreeBounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foregroundGravity="center"
            android:visibility="gone"
            app:SpinKit_Color="@color/buttonColor"
            app:btnclickLoading="@{vUserViewmodel.responseStatus}"
            app:layout_constraintBottom_toBottomOf="@+id/btnOkay"
            app:layout_constraintEnd_toStartOf="@+id/btnOkay"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/btnOkay"
             />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOkay"
            android:layout_width="@dimen/_60dp"
            android:layout_height="wrap_content"
            android:text="@string/ok"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_4dp"
            android:layout_marginEnd="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@+id/tl_pass"
            android:theme="@style/ButtonTheme"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>