<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_30dp"
        tools:context=".ui.auth.registration.ScannningFragment">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/tlBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <ImageView
                android:id="@+id/imageBack"
                android:layout_width="wrap_content"
                android:tint="@color/black"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:src="@drawable/ic_baseline_arrow_back_24"/>

        </androidx.appcompat.widget.Toolbar>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/tlBar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            android:text="@string/we_would_like_to_verify_your_identity" />
        <TextView
            android:id="@+id/tv_titleverify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_13sp"
            android:text="@string/you_can_use_either_your_national_id_or_passport_for_your_identity_to_be_verified" />
        <ProgressBar
            android:id="@+id/pb_test"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:indeterminate="false"
            android:progress="20"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            android:progressTint="@color/buttonColor"
            app:layout_constraintTop_toBottomOf="@+id/tv_titleverify"
            android:max="100"
            />
        <TextView
            android:id="@+id/percent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pb_test"
            android:layout_marginEnd="@dimen/_15dp"
            android:text="20%"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/percent"
            app:layout_constraintBottom_toTopOf="@+id/btnNationalId"
            android:src="@drawable/ic_id_card"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNationalId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonTheme"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/use_national_id"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sp"
            android:layout_marginTop="@dimen/_50dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnPassport"
            android:layout_marginBottom="@dimen/_20dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnPassport"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonTheme"
            android:background="@drawable/btn_less_radius"
            android:text="@string/use_passport"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:textSize="@dimen/_14sp"
            android:layout_marginTop="@dimen/_50dp"
            android:textColor="@color/textColor"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>