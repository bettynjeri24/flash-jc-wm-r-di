<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            app:elevation="0dp"
            android:background="@color/textColor"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tbToolBar"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/custom_toolbar"
                        android:layout_width="match_parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_height="wrap_content" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>


        </com.google.android.material.appbar.AppBarLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            tools:showIn="@layout/fragment_buy_airtime"
            >
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnPhoneLookUP"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.shares.SharePhoneLookupFragment">

        <TextView
            android:id="@+id/tvDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_5dp"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_14sp"
            android:text="@string/enter_mobile_number_to_continue"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"/>
        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10dp"
            android:layout_marginStart="@dimen/_3dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDetails">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioButton
                    android:id="@+id/rb_phoneN"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:button="@null"
                    android:checked="true"
                    android:drawableStart="@drawable/radio_button_state_icon"
                    android:drawablePadding="@dimen/_15dp"
                    android:padding="@dimen/_10dp"
                    android:paddingStart="@dimen/_15dp"
                    android:text="Use Phone Number"
                    android:textColor="@color/radio_button_text_color"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintHorizontal_chainStyle="packed"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RadioButton
                    android:id="@+id/rb_memberNo"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_40dp"
                    android:button="@null"
                    android:checked="false"
                    android:drawableStart="@drawable/radio_button_state_icon"
                    android:drawablePadding="@dimen/_15dp"
                    android:paddingStart="@dimen/_15dp"
                    android:text="Use Member Number"
                    android:textColor="@color/radio_button_text_color"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toEndOf="@+id/rb_phoneN"
                    app:layout_constraintTop_toTopOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </RadioGroup>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/tl_memberNo"
            style="@style/OutlineStyle"
            android:layout_marginStart="@dimen/_15dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            android:layout_height="wrap_content"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_memberNo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/member_number"
                android:focusable="true"
                android:inputType="phone"
                android:maxLength="13"
                android:singleLine="true"
                android:textCursorDrawable="@drawable/cursor" />

        </com.google.android.material.textfield.TextInputLayout>
        <LinearLayout
            android:id="@+id/ll_Phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginTop="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/radioGroup"
            android:orientation="horizontal">

            <com.hbb20.CountryCodePicker
                android:id="@+id/codePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="start"
                android:theme="@style/AppTheme"
                app:ccp_autoDetectCountry="true"
                app:ccp_showArrow="false"
                app:ccp_showFlag="false"
                android:paddingBottom="@dimen/_10dp"
                android:backgroundTint="#AD707070"
                android:layout_marginEnd="@dimen/_2dp"
                app:ccp_customMasterCountries="TZ,KE,UG,CM"
                app:ccp_textSize="16sp"
                app:ccp_contentColor="@color/textColor"
                app:ccp_showNameCode="false"
                />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="0dp"
                android:id="@+id/tl_phone"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_2dp"
                android:layout_marginTop="@dimen/_5dp"
                android:layout_height="wrap_content"
                android:drawableRight="@drawable/ic_contacts_book"
                android:drawableTint="@color/textColor"
                android:layout_weight="1.2"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/phone_number"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor" />

            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Cl_MemnberPhoneNumber"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ll_Phone">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlName"
                android:layout_width="match_parent"
                android:hint="@string/recipient_name"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:focusable="false"
                    android:inputType="text"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/tl_MEMNo"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tlName"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_MEMNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Recipient Member Number"
                    android:inputType="phone"
                    android:focusable="false"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_trafDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bluer"
                android:text="Transfer Details"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="@dimen/_13sp"
                app:layout_constraintTop_toBottomOf="@id/tl_MEMNo"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/tl_NoOfShares"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_trafDetails"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_no_of_shares"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Number of Shares"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_kesSha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_share_equity_kshs_100"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/hintColor"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_NoOfShares"/>
            <TextView
                android:id="@+id/PKES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_kesSha"
                tools:text="KES"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/tv_kesSha"
                app:layout_constraintBottom_toBottomOf="@+id/tv_kesSha"/>
            <TextView
                android:id="@+id/tvPShareEquity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/PKES"
                tools:text="200"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/PKES"
                app:layout_constraintBottom_toBottomOf="@+id/PKES"/>

            <TextView
                android:id="@+id/tv_valueShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_of_shares_in_kes"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/bluer"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_kesSha"/>
            <TextView
                android:id="@+id/tv_PKESShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_valueShare"
                tools:text="200"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/bluer"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/tv_valueShare"
                app:layout_constraintBottom_toBottomOf="@+id/tv_valueShare"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Cl_MemnberNumber"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tl_memberNo">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlMName"
                android:layout_width="match_parent"
                android:hint="@string/recipient_name"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Mname"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="text"
                    android:maxLength="50"
                    android:singleLine="true"
                    android:focusable="false"
                    android:textCursorDrawable="@drawable/cursor"
                    />
            </com.google.android.material.textfield.TextInputLayout>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/tl_RecPHONENo"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginTop="@dimen/_15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tlMName"
                android:layout_height="wrap_content"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_RecPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Recipient Phone Number"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:focusable="false"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor" />

            </com.google.android.material.textfield.TextInputLayout>
            <TextView
                android:id="@+id/tv_tranDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bluer"
                android:text="Transfer Details"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_10dp"
                android:textSize="@dimen/_13sp"
                app:layout_constraintTop_toBottomOf="@id/tl_RecPHONENo"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"/>
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:id="@+id/tl_MNoOfShares"
                style="@style/OutlineStyle"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:layout_marginTop="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_tranDetails"
                android:layout_height="wrap_content"
                app:counterEnabled="true"
                >
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_Mno_of_shares"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Number of Shares"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/tv_kSha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1_share_equity_kshs_100"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/hintColor"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_MNoOfShares"/>
            <TextView
                android:id="@+id/KES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tv_kSha"
                tools:text="KES"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/tv_kSha"
                app:layout_constraintBottom_toBottomOf="@+id/tv_kSha"/>
            <TextView
                android:id="@+id/tvShareEquity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/KES"
                tools:text="200"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/KES"
                app:layout_constraintBottom_toBottomOf="@+id/KES"/>

            <TextView
                android:id="@+id/tvValuSha"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/value_of_shares_in_kes"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/bluer"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_kSha"/>
            <TextView
                android:id="@+id/tv_KESShare"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/tvValuSha"
                tools:text="200"
                android:textSize="@dimen/_14sp"
                android:textColor="@color/bluer"
                android:textStyle="bold"
                android:layout_marginStart="@dimen/_5dp"
                app:layout_constraintTop_toTopOf="@+id/tvValuSha"
                app:layout_constraintBottom_toBottomOf="@+id/tvValuSha"/>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPhoneLookUP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_30dp"
                android:theme="@style/ButtonTheme"
                android:visibility="visible"
                android:layout_marginEnd="@dimen/_15dp"
                android:background="@drawable/btn_normal_bg"
                android:text="@string/continu"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnContinue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginBottom="@dimen/_30dp"
                android:theme="@style/ButtonTheme"
                android:visibility="gone"
                android:layout_marginEnd="@dimen/_15dp"
                android:background="@drawable/btn_normal_bg"
                android:text="@string/submit"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />

            <include
                android:id="@+id/progressbar"
                android:visibility="gone"
                layout="@layout/spinkit_dialog_loading"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>