<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loanProduct"
            type="com.ekenya.rnd.tijara.network.model.LoanProduct" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/requestList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_2dp"
        app:cardBackgroundColor="@color/grey_100"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        android:layout_marginTop="@dimen/_15dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Cl_loan_product"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/_20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_loan"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:layout_margin="1dp"
                android:layout_marginTop="@dimen/_2dp"
                android:background="@color/white"
                android:padding="@dimen/_1dp"
                android:layout_marginStart="16dp"
                android:scaleType="fitCenter"
                app:layout_constraintVertical_bias="1.0"
                app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.CornerSize50Percent"
                app:civ_border_color="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/initials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="@+id/iv_loan"
                app:layout_constraintEnd_toEndOf="@+id/iv_loan"
                app:layout_constraintHorizontal_bias="0.46"
                app:layout_constraintStart_toStartOf="@+id/iv_loan"
                app:layout_constraintTop_toTopOf="@+id/iv_loan"
                app:layout_constraintVertical_bias="0.543"
                tools:text="DM" />

            <TextView
                android:id="@+id/tvLoantitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="@dimen/_14sp"
                android:layout_toEndOf="@id/iv_loan"
                app:generalName="@{loanProduct.name}"
                app:layout_constraintStart_toEndOf="@id/iv_loan"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Personal Loan" />

            <TextView
                android:id="@+id/text_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/hintColor"
                android:text="@string/loan_limit"
                app:layout_constraintStart_toStartOf="@+id/tvLoantitle"
                app:layout_constraintTop_toBottomOf="@+id/tvLoantitle" />

            <TextView
                android:id="@+id/tv_limit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/hintColor"
                app:generalName="@{loanProduct.limit}"
                app:layout_constraintBottom_toBottomOf="@+id/text_limit"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/text_limit"
                app:layout_constraintTop_toTopOf="@+id/text_limit"
                tools:text="3 years" />
            <TextView
                android:id="@+id/tv_pay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/hintColor"
                android:text="@string/repayment_period_of"
                app:layout_constraintStart_toStartOf="@+id/text_limit"
                app:layout_constraintTop_toBottomOf="@+id/text_limit" />

            <TextView
                android:id="@+id/tv_payPeriod"
                android:layout_width="0dp"
                android:textSize="@dimen/_13sp"
                android:textColor="@color/hintColor"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                app:generalName="@{loanProduct.maxRepaymentPeriod}"
                app:layout_constraintBottom_toBottomOf="@+id/tv_pay"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/tv_pay"
                app:layout_constraintTop_toTopOf="@+id/tv_pay"
                tools:text="3 years" />
            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="@dimen/_8dp"
                android:layout_height="@dimen/_15dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="@dimen/_15dp"
                android:src="@drawable/ic_back_loans"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


</layout>