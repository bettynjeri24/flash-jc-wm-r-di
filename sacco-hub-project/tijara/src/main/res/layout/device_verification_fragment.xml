<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_30dp"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".ui.auth.changepassword.OTPFragment">
            <include
                android:id="@+id/progressr"
                android:visibility="gone"
                layout="@layout/spinkit_dialog_loading"
                />
            <ImageView
                android:id="@+id/iv_logo"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_40dp"
                android:layout_marginTop="@dimen/_56dp"
                android:src="@drawable/app_logo"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/tv_ver_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_logo"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="@dimen/_22dp"
                android:layout_marginTop="@dimen/_20dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_marginEnd="@dimen/_20dp"
                tools:text="@string/we_have_sent_verification_code"
                android:textSize="@dimen/_15sp"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_code"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_ver_code">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_one"
                    style="@style/OutlineStyle"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_60dp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_3dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/input_two"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etInputOne"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_two"
                    style="@style/OutlineStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/input_one"
                    app:layout_constraintEnd_toStartOf="@+id/input_three"
                    app:layout_constraintStart_toEndOf="@+id/input_one"
                    app:layout_constraintTop_toTopOf="@+id/input_one">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input_two"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_three"
                    style="@style/OutlineStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/input_two"
                    app:layout_constraintEnd_toStartOf="@+id/input_four"
                    app:layout_constraintStart_toEndOf="@+id/input_two"
                    app:layout_constraintTop_toTopOf="@id/input_two">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input_three"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_four"
                    style="@style/OutlineStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_3dp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/input_three"
                    app:layout_constraintEnd_toStartOf="@+id/input_five"
                    app:layout_constraintStart_toEndOf="@+id/input_three"
                    app:layout_constraintTop_toTopOf="@+id/input_three">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input_four"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_five"
                    style="@style/OutlineStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/input_four"
                    app:layout_constraintEnd_toStartOf="@+id/input_six"
                    app:layout_constraintStart_toEndOf="@+id/input_four"
                    app:layout_constraintTop_toTopOf="@+id/input_four">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input_five"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/input_six"
                    style="@style/OutlineStyle"
                    android:layout_width="0dp"
                    android:layout_height="60dp"
                    android:textColor="@color/black"
                    android:layout_marginStart="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_3dp"
                    app:layout_constraintBottom_toBottomOf="@+id/input_five"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/input_five"
                    app:layout_constraintTop_toTopOf="@+id/input_five">


                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_input_six"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false"
                        android:gravity="center_horizontal"
                        android:inputType="number" />
                </com.google.android.material.textfield.TextInputLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layout_code"
                android:layout_marginTop="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_20dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_rcv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/the_password_will_expiry_in"
                    android:layout_marginStart="@dimen/_50dp"
                    android:layout_marginEnd="@dimen/_3dp"
                    android:layout_alignParentStart="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sp"
                    />

                <TextView
                    android:id="@+id/code_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@id/tv_rcv_code"
                    tools:text="15 sec"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_12sp"
                    />
                <TextView
                    android:id="@+id/btnShow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_alignParentEnd="true"
                    android:visibility="gone"
                   android:layout_marginEnd="@dimen/_30dp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_16sp"

                    android:text="SHOW"/>
            </RelativeLayout>


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_resend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginEnd="@dimen/_20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
                android:background="@drawable/btn_normal_bg"
                android:text="@string/resend"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                android:theme="@style/ButtonTheme"
                android:layout_marginTop="@dimen/_20dp"
                android:layout_marginBottom="@dimen/_20dp"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>