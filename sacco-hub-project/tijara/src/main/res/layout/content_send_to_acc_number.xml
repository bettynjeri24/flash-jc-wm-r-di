<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/fragment_send_to_acc_number"
        >

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="@dimen/_30dp"
                android:paddingBottom="@dimen/_30dp"
                >

                <TextView
                    android:id="@+id/tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textColor="@color/textColor"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:text="@string/how_much_fund_would_you_like_to_transfer"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlEnterAmount"
                    android:layout_width="match_parent"
                    android:hint="@string/amount"
                    android:layout_marginTop="@dimen/_15dp"
                    app:endIconMode="clear_text"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_title"
                    style="@style/OutlineStyle"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_amount"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:maxLength="20"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/cursor"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <TextView
                    android:id="@+id/tv_bankto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluer"
                    android:text="@string/recipient_details"
                    android:textAllCaps="false"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/_13sp"
                    app:layout_constraintTop_toBottomOf="@id/tlEnterAmount"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_20dp"/>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tl_acNo"
                    android:layout_width="match_parent"
                    android:hint="@string/recipient_account_no"
                    android:layout_marginTop="@dimen/_10dp"
                    app:endIconMode="clear_text"
                    android:layout_marginStart="@dimen/_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_bankto"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_height="wrap_content"
                    style="@style/OutlineStyle"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_acNumber"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="number"
                        android:maxLength="16"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/cursor"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/ti_recp_name"
                    android:layout_width="match_parent"
                    android:hint="@string/recipient_name"
                    android:layout_marginTop="@dimen/_20dp"
                    android:layout_marginStart="@dimen/_15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tl_acNo"
                    android:layout_marginEnd="@dimen/_15dp"
                    app:endIconMode="clear_text"
                    android:layout_height="wrap_content"
                    style="@style/OutlineStyle"

                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_recpName"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="text"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/cursor"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiBankType"
                    style="@style/exposedDropdownMenuCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_10dp"
                    app:endIconTint="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/ti_recp_name">
                    <AutoCompleteTextView
                        android:id="@+id/bank_spinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_bank"
                        android:textColor="@color/hintColor"
                        />
                </com.google.android.material.textfield.TextInputLayout>


                <TextView
                    android:id="@+id/tv_buyFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/bluer"
                    android:text="@string/transfer_from"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="@dimen/_10dp"
                    android:textSize="@dimen/_13sp"
                    app:layout_constraintTop_toBottomOf="@id/tiBankType"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_20dp"/>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tiType"
                    style="@style/exposedDropdownMenuCustom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    android:layout_marginTop="@dimen/_10dp"
                    app:endIconTint="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_buyFrom">
                    <AutoCompleteTextView
                        android:id="@+id/accountSpinner"
                        android:focusable="false"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_account"
                        android:textColor="@color/hintColor"
                        />
                </com.google.android.material.textfield.TextInputLayout>
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlReason"
                    android:layout_width="match_parent"
                    android:hint="@string/reason_for_payment"
                    android:layout_marginTop="@dimen/_20dp"
                    app:endIconMode="clear_text"
                    android:layout_height="@dimen/_80dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tiType"
                    style="@style/OutlineStyle"
                    android:layout_marginStart="@dimen/_15dp"
                    android:layout_marginEnd="@dimen/_15dp"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_reason"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textMultiLine"
                        android:textAlignment="textStart"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textCursorDrawable="@drawable/cursor"
                        />
                </com.google.android.material.textfield.TextInputLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50dp"
            android:layout_marginStart="@dimen/_15dp"
            android:theme="@style/ButtonTheme"
            android:layout_marginEnd="@dimen/_15dp"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/continu"
            android:textAllCaps="true"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_30dp"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>