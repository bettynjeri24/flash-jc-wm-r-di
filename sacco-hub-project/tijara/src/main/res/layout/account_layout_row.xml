<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="account"
            type="com.ekenya.rnd.tijara.network.model.Accounts" />
        <variable
            name="dashBoardViewmodel"
            type="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.DashboardViewModel" />
    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                app:notEmptyListConstraint="@{dashBoardViewmodel.isVisible()}"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@drawable/elevated_bg"
                android:elevation="@dimen/_55dp"
                android:layout_marginEnd="@dimen/_2dp"
                android:orientation="vertical">
            <include
                android:id="@+id/spKit_progress"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                layout="@layout/white_bg_spinkit"/>

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    app:generalName="@{account.product}"
                    android:textColor="@color/cardTextColor"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="BOSA" />
            <ImageView
                android:id="@+id/passToggle"
                android:layout_width="@dimen/_20dp"
                android:layout_height="@dimen/_22dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="@dimen/_20dp"
                app:layout_constraintTop_toTopOf="@+id/tv_product_name"
                app:layout_constraintBottom_toBottomOf="@+id/tv_product_name"
                android:src="@drawable/ic_eye"
                />

                <TextView
                    android:id="@+id/tv_current_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:text="@string/current_bal"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

                <TextView
                    android:id="@+id/tv_kes_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    tools:text="@string/kes"
                    android:textSize="@dimen/_14sp"
                    app:generalName="@{account.defaultCurrency}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_current_bal"
                    app:layout_constraintEnd_toStartOf="@+id/tv_Camount"
                    app:layout_constraintTop_toTopOf="@+id/tv_current_bal"
                    android:layout_marginEnd="@dimen/_15dp"
                     />

                <TextView
                    android:id="@+id/tv_Camount"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_kes_currency"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_kes_currency"
                    tools:text="20,000" />

                <TextView
                    android:id="@+id/tv_available_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:text="@string/avail_bal"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_current_bal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_current_bal" />

                <TextView
                    android:id="@+id/tv_def_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/kes"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_15dp"
                    app:generalName="@{account.defaultCurrency}"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_available_bal"
                    app:layout_constraintEnd_toStartOf="@+id/tv_available_amount"
                    app:layout_constraintTop_toTopOf="@+id/tv_available_bal" />

                <TextView
                    android:id="@+id/tv_available_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    tools:text="40,000"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_def_currency"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_def_currency" />

                <TextView
                    android:id="@+id/tv_saving_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    android:layout_marginTop="10dp"
                    android:text="@string/last_saving_date"
                    app:layout_constraintStart_toStartOf="@+id/tv_available_bal"
                    app:layout_constraintTop_toBottomOf="@+id/tv_available_bal" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="10/07/2021"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    android:layout_marginEnd="@dimen/_20dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_saving_date"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_saving_date" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        <LinearLayout
            android:id="@+id/no_shows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:emptyListLinear="@{dashBoardViewmodel.isEmpty()}"
            android:gravity="center"
            android:visibility="gone"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_5dp"

            >

            <ImageView
                android:id="@+id/iv_noShow"
                android:layout_width="@dimen/_70dp"
                android:layout_height="@dimen/_70dp"
                android:src="@drawable/ic_no_results"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="@string/seem_like_you_have_no_saving_account"
                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_create"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_less_radius"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/create_saving_account"
                android:textAllCaps="true"
                android:textColor="@color/textColor"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/_7dp"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                android:theme="@style/ButtonTheme"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            app:errorPage="@{dashBoardViewmodel.isError()}"
            android:visibility="gone"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="@dimen/_70dp"
                android:layout_height="70dp"
                android:src="@drawable/ic_error_off"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/_5dp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/oops_we_are_sorry_error_occured_try_again_later"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView"
                app:layout_constraintVertical_bias="0.3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</layout>