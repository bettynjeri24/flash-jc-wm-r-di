<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/main_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_24dp"
            android:layout_marginEnd="@dimen/_24dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_title_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/cardTextColor"
                android:textSize="@dimen/_14sp"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="27dp"
                tools:text="FOSA" />

            <TextView
                android:id="@+id/tv_title_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/tv_title_one"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="20dp"
                tools:text="Current Balance" />

            <TextView
                android:id="@+id/tv_title_two_bal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:layout_below="@+id/tv_title_one"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="20dp"
                tools:text="20,000" />

            <TextView
                android:id="@+id/tv_title_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:layout_below="@+id/tv_title_two"
                android:layout_marginStart="@dimen/_20dp"
                android:layout_marginTop="20dp"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="@dimen/_20dp"
                tools:text="Available Balance" />

            <TextView
                android:id="@+id/tv_title_three_bal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/_14sp"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_title_two"
                android:layout_marginEnd="@dimen/_20dp"
                android:layout_marginTop="20dp"
                tools:text="40,000.00" />

        </RelativeLayout>

    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</layout>