<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="tempGuarantor"
            type="com.ekenya.rnd.tijara.network.model.TempGuarantor" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:id="@+id/clContact"
        android:layout_height="wrap_content">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/group_icon"
            android:layout_width="@dimen/_30dp"
            android:layout_height="@dimen/_30dp"
            android:layout_margin="10dp"
            android:background="@drawable/selected_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/initials"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingRight="@dimen/_5dp"
            app:layout_constraintBottom_toBottomOf="@+id/group_icon"
            app:layout_constraintEnd_toEndOf="@+id/group_icon"
            app:layout_constraintStart_toStartOf="@+id/group_icon"
            app:layout_constraintTop_toTopOf="@+id/group_icon"
            tools:text="DM" />


            <TextView
                android:id="@+id/memName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                tools:text="Member Name"
                app:generalName="@{tempGuarantor.memberName}"
                android:layout_marginStart="10dp"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/group_icon"
                app:layout_constraintStart_toEndOf="@id/group_icon"
                />
        <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="Member Name"
                android:layout_marginEnd="10dp"
            android:textColor="@color/black"
                android:gravity="center_vertical"
                app:layout_constraintTop_toTopOf="@id/memName"
                app:layout_constraintBottom_toBottomOf="@id/memName"
                app:layout_constraintEnd_toStartOf="@+id/iv_remove"

                />
            <TextView
                android:id="@+id/memberPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:generalName="@{tempGuarantor.memberNumber}"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/memName"
                app:layout_constraintStart_toStartOf="@id/memName"
                tools:text="07xxxxxxx"/>
        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            tools:text="Member Name"
            app:loadDateDayOfWeek="@{tempGuarantor.dateAdded}"
            android:layout_marginEnd="10dp"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="@id/memberPhone"
            app:layout_constraintBottom_toBottomOf="@id/memberPhone"
            app:layout_constraintEnd_toStartOf="@+id/iv_remove"

            />
        <ImageView
            android:id="@+id/iv_remove"
            android:layout_width="@dimen/_30dp"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:paddingEnd="@dimen/_15dp"
         android:paddingBottom="@dimen/_10dp"
            android:paddingTop="@dimen/_20dp"
            android:layout_marginTop="@dimen/_5dp"
            android:src="@drawable/ic_remove"
            app:layout_constraintTop_toTopOf="parent"/>




    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>