<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="shareViewmodel"
            type="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.shares.ShareStatusViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:background="@color/textColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/custom_toolbar"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    android:background="@color/textColor"
                    android:layout_height="?attr/actionBarSize"
                    >
                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/custom_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize" />
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/_50dp"
        tools:context="com.ekenya.rnd.tijara.ui.homepage.home.dashboard.shares.ShareStatusFragment">
        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F7F7F7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:weightSum="2">

            <TextView
                android:id="@+id/requestReceived"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@color/blue_light"
                android:gravity="center"
                android:text="@string/request_received"
                android:textColor="@color/black" />
             <TextView
                android:id="@+id/requestSent"
                android:layout_width="0dp"
                android:layout_height="@dimen/_50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/requests_sent"
                 android:background="@color/colorAccent"
                android:textColor="@color/black" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_bal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_13sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linear"
            android:layout_marginTop="@dimen/_15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="12 "
            android:textColor="@color/black"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/tv_tShare"
            app:layout_constraintTop_toBottomOf="@id/tv_bal"
            android:id="@+id/tv_totalShare"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginTop="@dimen/_4dp"/>
        <TextView
            android:id="@+id/tv_tShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shares"
            android:textColor="@color/black"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="-20dp"
            android:textSize="@dimen/_16sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_bal"
           app:layout_constraintTop_toTopOf="@+id/tv_totalShare"
            app:layout_constraintBottom_toBottomOf="@+id/tv_totalShare"
       />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Value of shares:"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="@+id/tv_totalShare"
            android:layout_marginStart="-20dp"
            app:layout_constraintTop_toBottomOf="@id/tv_totalShare"
            android:id="@+id/tv_shareValue"
            android:layout_marginTop="@dimen/_6dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="KSH 12000"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_13sp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_20dp"
            android:layout_marginStart="@dimen/_3dp"
            app:layout_constraintStart_toEndOf="@+id/tv_shareValue"
            app:layout_constraintBottom_toBottomOf="@+id/tv_shareValue"
           app:layout_constraintTop_toTopOf="@+id/tv_shareValue"
            android:id="@+id/tv_KESVALUE"
           />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/etColor"
            android:textSize="@dimen/_13sp"
            android:textStyle="bold"
            android:layout_marginEnd="@dimen/_5dp"
            android:layout_marginStart="@dimen/_5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_shareValue"
            android:id="@+id/view1"
            android:layout_marginTop="@dimen/_15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Requests"
            android:textColor="@color/hintColor"
            android:textSize="@dimen/_13sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintTop_toBottomOf="@id/view1"
            android:id="@+id/tv_request"
            android:layout_marginTop="@dimen/_15dp"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/BtnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:theme="@style/ButtonTheme"
            android:visibility="gone"
            android:background="?android:attr/selectableItemBackground"
           app:layout_constraintEnd_toEndOf="parent"
            android:drawableLeft="@drawable/ic__add"
            android:drawableTint="@color/textColor"
            app:layout_constraintTop_toTopOf="@id/tv_request"
            app:layout_constraintBottom_toBottomOf="@+id/tv_request"
            android:clickable="true"
            android:focusable="true"
            android:text="Add new request"
            android:textAllCaps="false"
            android:textColor="@color/textColor"
            android:textSize="@dimen/_12sp"
            android:textStyle="bold" />
        <include
            android:id="@+id/progress_spinkit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            layout="@layout/white_bg_spinkit"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Cl_requestReceived"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_request"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvShareHistory"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingBottom="@dimen/_50dp"
                android:layout_marginTop="@dimen/_20dp"
                app:listshareRequest="@{shareViewmodel.shareProperties}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                tools:itemCount="2"
                tools:listitem="@layout/shares_received_item_list" />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/no_shows"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_10dp"
                app:emptyList="@{shareViewmodel.isEmpty()}"
                >

                <ImageView
                    android:id="@+id/iv_loan"
                    android:layout_width="242dp"
                    android:layout_height="@dimen/_230dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_no_results"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.398" />

                <TextView
                    android:id="@+id/tv_title_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/iv_loan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="There are no request!"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Cl_requestSent"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_request"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/no_sws"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_50dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="@dimen/_10dp"
                app:emptyList="@{shareViewmodel.isEmptySent()}"
                >

                <ImageView
                    android:id="@+id/iv_ln"
                    android:layout_width="242dp"
                    android:layout_height="@dimen/_230dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/ic_no_results"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.398" />

                <TextView
                    android:id="@+id/tv_title_o"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/iv_ln"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="There are no request!"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvShareSent"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:paddingBottom="@dimen/_50dp"
                android:layout_marginTop="@dimen/_20dp"
                app:listshareSent="@{shareViewmodel.shareSentProperties}"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                tools:itemCount="2"
                tools:listitem="@layout/shares_sent_item_list" />

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="125dp"
                android:layout_height="125dp"
                android:src="@drawable/ic_no_share"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20dp"
                android:text="No Pending Request"
                android:textColor="#707070"
                android:textSize="@dimen/_13sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView7" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
        <LinearLayout
            android:id="@+id/fab_full_btn"
            android:layout_width="wrap_content"
            android:layout_height="43dp"
            android:layout_gravity="end|bottom"
            android:layout_margin="@dimen/_16dp"
            android:animateLayoutChanges="true"
            android:background="@drawable/fab_btn_corners"
            android:backgroundTint="@color/buttonColor"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:outlineProvider="none"
            android:outlineSpotShadowColor="@android:color/transparent">
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/add_fab"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                app:backgroundTint="@color/buttonColor"
                app:borderWidth="0dp"
                app:fabSize="normal"
                app:tint="@color/white"
                app:srcCompat="@drawable/ic__add"
                app:useCompatPadding="false"/>

            <TextView
                android:id="@+id/chat_fab_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:paddingStart="0dp"
                android:paddingEnd="@dimen/_15dp"
                android:text="Add new request"
                android:textAllCaps="true"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"/>



        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>