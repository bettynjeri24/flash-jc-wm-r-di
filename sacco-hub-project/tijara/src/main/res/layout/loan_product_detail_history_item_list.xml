<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="loanHistory"
            type="com.ekenya.rnd.tijara.network.model.LoanDataHistory" />
    </data>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_60dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        app:layout_constraintBottom_toBottomOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_card"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="@dimen/_40dp"
                    android:layout_height="@dimen/_40dp"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_history_icon" />

                <TextView
                    android:id="@+id/tv_product_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="20dp"
                    tools:text="business loan"
                    app:generalName="@{loanHistory.name}"
                    app:layout_constraintStart_toEndOf="@+id/imageView3"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_amont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2000"
                    android:textColor="@color/textColor"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_product_name"
                    app:layout_constraintEnd_toStartOf="@+id/imageView4"
                    app:layout_constraintTop_toTopOf="@+id/tv_product_name"
                    />
                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="@dimen/_30dp"
                    android:layout_height="@dimen/_30dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_amont"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_11dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_amont"
                    app:srcCompat="@drawable/bank_arrow" />

                <TextView
                    android:id="@+id/tv_product_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    tools:text="bloo1"
                    app:generalName="@{loanHistory.productCode}"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name" />

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    tools:text="02/09/2090"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_product_id"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_product_id" />


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_history"
                android:layout_width="match_parent"
                android:visibility="gone"
                android:paddingBottom="@dimen/_10dp"
                android:layout_height="wrap_content">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1dp"
                    android:layout_marginStart="@dimen/_5dp"
                    android:layout_marginTop="@dimen/_3dp"
                    android:layout_marginEnd="@dimen/_5dp"
                    android:background="@color/hintColor"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount_applied"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_interest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    tools:text="10%"
                    app:layout_constraintBottom_toBottomOf="@+id/text_interest"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_interest" />

                <TextView
                    android:id="@+id/text_amont_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount_paid"
                    app:layout_constraintStart_toStartOf="@+id/text_interest"
                    app:layout_constraintTop_toBottomOf="@+id/text_interest" />

                <TextView
                    android:id="@+id/tv_amount_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    tools:text="2000"
                    app:layout_constraintBottom_toBottomOf="@+id/text_amont_paid"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_amont_paid" />

                <TextView
                    android:id="@+id/text_amount_disbured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount_disbursed"
                    app:layout_constraintStart_toStartOf="@+id/text_amont_paid"
                    app:layout_constraintTop_toBottomOf="@+id/text_amont_paid" />

                <TextView
                    android:id="@+id/tv_amount_disbured"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    tools:text="2000"
                    app:layout_constraintBottom_toBottomOf="@+id/text_amount_disbured"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_amount_disbured" />

                <TextView
                    android:id="@+id/text_disbursed_dare"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/disbursed_date"
                    app:layout_constraintStart_toStartOf="@+id/text_amount_disbured"
                    app:layout_constraintTop_toBottomOf="@+id/text_amount_disbured" />

                <TextView
                    android:id="@+id/tv_disbured_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    tools:text="02/02/2022"
                    app:layout_constraintBottom_toBottomOf="@+id/text_disbursed_dare"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_disbursed_dare" />

                <TextView
                    android:id="@+id/text_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Status"
                    app:layout_constraintStart_toStartOf="@+id/text_disbursed_dare"
                    app:layout_constraintTop_toBottomOf="@+id/text_disbursed_dare" />

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    tools:text="complete"
                    app:generalName="@{loanHistory.status}"
                    app:layout_constraintBottom_toBottomOf="@+id/text_status"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_status" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</layout>