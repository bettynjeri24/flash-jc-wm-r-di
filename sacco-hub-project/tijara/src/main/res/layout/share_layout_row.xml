<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="account"
            type="com.ekenya.rnd.tijara.network.model.Accounts" />
    </data>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_10dp"
                android:layout_marginStart="@dimen/_2dp"
                android:background="@drawable/elevated_bg"
                android:elevation="@dimen/_55dp"
                android:layout_marginEnd="@dimen/_2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_account_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:textColor="@color/cardTextColor"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="BOSA" />
                <ImageView
                    android:id="@+id/eyeToggle"
                    android:layout_width="@dimen/_20dp"
                    android:layout_height="@dimen/_22dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_20dp"
                    app:layout_constraintTop_toTopOf="@+id/tv_account_name"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_account_name"
                    android:src="@drawable/ic_eye"
                    />

                <TextView
                    android:id="@+id/text_dividend"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dividend"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="@+id/tv_account_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_account_name" />

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/kes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_dividend"
                    app:layout_constraintEnd_toStartOf="@+id/tv_dividend_amount"
                    app:layout_constraintTop_toTopOf="@+id/text_dividend"
                    android:layout_marginEnd="@dimen/_15dp"
                     />

                <TextView
                    android:id="@+id/tv_dividend_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_currency"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_currency"
                    tools:text="20,000" />

                <TextView
                    android:id="@+id/text_dividend_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/dividend_rate"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    app:layout_constraintStart_toStartOf="@+id/text_dividend"
                    app:layout_constraintTop_toBottomOf="@+id/text_dividend" />


                <TextView
                    android:id="@+id/tv_dividend_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    tools:text="40,000"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/text_dividend_rate"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_dividend_rate" />
                <TextView
                    android:id="@+id/text_shareCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/text_dividend"
                    android:text="Share Capital"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintTop_toBottomOf="@+id/text_dividend_rate" />

                <TextView
                    android:id="@+id/tv_Sharecurrency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@string/kes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_shareCap"
                    app:layout_constraintEnd_toStartOf="@+id/tv_shareCap"
                    app:layout_constraintTop_toTopOf="@+id/tv_shareCap"
                    android:layout_marginEnd="@dimen/_15dp"
                    />

                <TextView
                    android:id="@+id/tv_shareCap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_20dp"
                    android:textSize="@dimen/_14sp"
                    android:textColor="@color/black"
                    app:layout_constraintBottom_toBottomOf="@+id/text_shareCap"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_shareCap"
                    tools:text="20,000" />


            </androidx.constraintlayout.widget.ConstraintLayout>


</layout>