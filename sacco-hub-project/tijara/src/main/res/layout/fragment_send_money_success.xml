<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textColor"
        >
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/textColor"
            >
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/tbToolBar"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginTop="@dimen/_20dp"
                app:contentInsetEnd="0dp"
                app:contentInsetStart="0dp">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize">

                    <ImageView
                        android:id="@+id/imageBack"
                        android:layout_width="wrap_content"
                        android:layout_marginStart="@dimen/_10dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_arrow_back_24"
                        app:tint="@color/white"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintHorizontal_chainStyle="packed"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tb_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_16dp"
                        android:text="@string/successful"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_15sp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageBack"
                        app:layout_constraintTop_toTopOf="@+id/imageBack"
                        app:layout_constraintStart_toEndOf="@+id/imageBack" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.appcompat.widget.Toolbar>
        </com.google.android.material.appbar.AppBarLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/ic_check_s"
                app:layout_constraintBottom_toTopOf="@+id/doneBtn"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:paddingBottom="@dimen/_30dp"
                    android:layout_height="match_parent">
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/animation"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_marginTop="@dimen/_15dp"
                        app:lottie_rawRes="@raw/success_lottie"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>
                    <com.airbnb.lottie.LottieAnimationView
                        android:id="@+id/check"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        app:lottie_autoPlay="true"
                        app:lottie_loop="true"
                        android:layout_marginTop="@dimen/_15dp"
                        app:lottie_rawRes="@raw/check"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <TextView
                        android:id="@+id/check_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/animation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        tools:text="Pesalink Transaction Successful"
                        android:textSize="@dimen/_20sp"
                        android:textAlignment="center"
                        android:textColor="#0AFD00"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        android:layout_marginTop="@dimen/_20dp"
                        android:gravity="center"/>
                    <TextView
                        android:id="@+id/tv1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/your_request_has_been_received"
                        android:textSize="@dimen/_12sp"
                        android:textColor="@color/hintColor"
                        android:layout_marginStart="@dimen/_15dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        app:layout_constraintTop_toBottomOf="@+id/check_title"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_20dp"
                        android:layout_centerHorizontal="true"
                        android:gravity="center"/>
                    <View
                        android:id="@+id/viewOne"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv1"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="@dimen/_15dp"
                        android:background="@color/etColor"
                        android:layout_marginStart="@dimen/_15dp"
                        />
                    <TextView
                        android:id="@+id/tv_Name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/viewOne"
                        android:layout_marginStart="@dimen/_25dp"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_20dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="NAME:"
                        />
                    <TextView
                        android:id="@+id/tv_NameValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@id/tv_Name"
                        android:layout_marginEnd="@dimen/_25dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@id/tv_Name"
                        tools:text="DAMS"
                        />
                    <TextView
                        android:id="@+id/tv_Bank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_Name"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textAllCaps="true"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_Name"
                        android:text="BANK"
                        />
                    <TextView
                        android:id="@+id/tv_BankValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_Bank"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_Bank"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="STANBIC"
                        />
                    <TextView
                        android:id="@+id/tv_ACNO"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_Bank"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textAllCaps="true"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_Name"
                        tools:text="ACCOUNT NUMBER"
                        />
                    <TextView
                        android:id="@+id/tv_ACNOValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_ACNO"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_ACNO"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="12345678"
                        />
                    <TextView
                        android:id="@+id/tv_Amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_ACNO"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textAllCaps="true"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_ACNO"
                        android:text="Amount"
                        />
                    <TextView
                        android:id="@+id/tv_AmountValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_Amount"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_Amount"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="1200"
                        />
                    <TextView
                        android:id="@+id/tv_From"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_Amount"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_Amount"
                        tools:text="FROM"
                        />
                    <TextView
                        android:id="@+id/tv_FromValur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_From"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_From"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="MUHIA"
                        />
                    <TextView
                        android:id="@+id/tv_Duty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_From"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_From"
                        tools:text="DUTY"
                        />
                    <TextView
                        android:id="@+id/tv_DutyValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_Duty"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_Duty"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="MUHIA"
                        />
                    <TextView
                        android:id="@+id/tv_REFID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_Duty"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_Duty"
                        android:text="REF ID:"
                        />
                    <TextView
                        android:id="@+id/tv_REFIDValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_REFID"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_REFID"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="MUHIA"
                        />
                    <TextView
                        android:id="@+id/tv_tnDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/tv_REFID"
                        android:layout_marginTop="@dimen/_10dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintStart_toStartOf="@id/tv_REFID"
                        android:text="@string/time_amp_date"
                        />
                    <TextView
                        android:id="@+id/tv_timeNdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="@+id/tv_tnDate"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_tnDate"
                        android:layout_marginTop="@dimen/_2dp"
                        android:textSize="@dimen/_13sp"
                        android:textColor="@color/hintColor"
                        app:layout_constraintEnd_toEndOf="@id/tv_NameValue"
                        tools:text="MUHIA"
                        />
                    <View
                        android:id="@+id/viewtwo"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1dp"
                        android:layout_marginEnd="@dimen/_15dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_tnDate"
                        android:layout_below="@+id/tv1"
                        android:layout_marginTop="@dimen/_15dp"
                        android:background="@color/etColor"
                        android:layout_marginStart="@dimen/_15dp"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/textColor"
                        android:layout_marginTop="@dimen/_5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/viewtwo"
                        android:text="Thank You!"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.core.widget.NestedScrollView>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/doneBtn"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50dp"
                android:layout_marginStart="@dimen/_15dp"
                android:layout_marginEnd="@dimen/_15dp"
                android:text="@string/done"
                android:background="@drawable/btn_bg_white_less_rad"
                android:textAllCaps="false"
                android:theme="@style/ButtonThemeWhite"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="@dimen/_10dp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/_16sp"
                android:textStyle="bold" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>
