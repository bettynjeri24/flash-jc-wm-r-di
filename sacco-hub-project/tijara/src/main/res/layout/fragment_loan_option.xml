<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="loanDetailsViewmodel"
            type="com.ekenya.rnd.tijara.ui.homepage.loan.getloan.LoanProductViewModel" />
    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100dp"
        android:background="@color/textColor"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        android:fitsSystemWindows="true"
        >
        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/custom_toolbar"
                android:layout_width="match_parent"
                android:visibility="visible"
                app:layout_collapseMode="pin"
                android:background="@color/textColor"
                android:layout_height="?attr/actionBarSize"
                >
                <include
                    android:id="@+id/toolbar"
                    layout="@layout/custom_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize" />
            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.homepage.loan.getloan.LoanOptionFragment">
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@color/buttonColor"/>
        <TextView
            android:id="@+id/text_placeholder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="@string/your_active_loan_summary_details"
            android:textColor="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/cardView" />
        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.13" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10dp"
            android:layout_marginEnd="@dimen/_10dp"
            app:cardCornerRadius="@dimen/_8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline"
            app:layout_constraintBottom_toBottomOf="@id/guideline"
            app:layout_constraintStart_toStartOf="parent" >

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/cl_activeLoan"
                android:visibility="visible"
                android:paddingBottom="@dimen/_10dp">
                <include
                    android:id="@+id/progress_spinkit"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:visibility="gone"
                    app:layout_constraintBottom_toBottomOf="parent"
                    layout="@layout/white_bg_spinkit"/>

                <TextView
                    android:id="@+id/tv_title_totalAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount_applied"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_total_amount_applied"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_title_totalAmount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_title_totalAmount"
                    tools:text="20000" />

                <TextView
                    android:id="@+id/text_amount_disbursed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount_disbursed"
                    app:layout_constraintStart_toStartOf="@+id/tv_title_totalAmount"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_totalAmount" />

                <TextView
                    android:id="@+id/tv_amount_disbursed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_amount_disbursed"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_amount_disbursed"
                    tools:text="20000" />

                <TextView
                    android:id="@+id/text_paid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/amount_paid"
                    app:layout_constraintStart_toStartOf="@+id/text_amount_disbursed"
                    app:layout_constraintTop_toBottomOf="@+id/text_amount_disbursed" />

                <TextView
                    android:id="@+id/tv_paid_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_paid"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_paid"
                    tools:text="20000" />
                <TextView
                    android:id="@+id/text_IAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/interest_amount"
                    app:layout_constraintStart_toStartOf="@+id/text_paid"
                    app:layout_constraintTop_toBottomOf="@+id/text_paid"  />

                <TextView
                    android:id="@+id/tv_IAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_IAmount"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_IAmount"
                    tools:text="20000" />

                <TextView
                    android:id="@+id/text_loan_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/loan_balance"
                    app:layout_constraintStart_toStartOf="@+id/text_IAmount"
                    app:layout_constraintTop_toBottomOf="@+id/text_IAmount" />

                <TextView
                    android:id="@+id/tv_loan_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/text_loan_bal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/text_loan_bal"
                    tools:text="20000" />
            </androidx.constraintlayout.widget.ConstraintLayout>
            <LinearLayout
                android:id="@+id/no_LoanShows"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:gravity="center"
                android:orientation="vertical"
                android:paddingBottom="@dimen/_5dp">

                <ImageView
                    android:id="@+id/iv_noShow"
                    android:layout_width="150dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="@dimen/_10dp"
                    android:src="@drawable/ic_no_results" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/_10dp"
                    android:text="@string/n0_active_loan_currently"
                    />
                <TextView
                    android:id="@+id/loan_title_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_5dp"
                    android:paddingBottom="@dimen/_10dp"
                    tools:text="@string/n0_active_loan_currently"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Layout_cantTopUp"
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_marginTop="@dimen/_20dp"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/CVLoanHistoryLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="@dimen/_60dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/_5dp"
                app:cardUseCompatPadding="true"
                >


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/Constraint_Loan"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_4dp"
                    android:layout_height="match_parent">
                    <View
                        android:id="@+id/viewLine"
                        android:layout_width="@dimen/_5dp"
                        android:layout_height="@dimen/_60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="@dimen/_4dp"
                        android:paddingBottom="@dimen/_4dp"
                        app:layout_constraintStart_toStartOf="parent"
                        android:background="@color/buttonColor"/>

                    <TextView
                        android:id="@+id/tv_loanOption"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/viewLine"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:text="@string/loan_history"
                        android:textSize="@dimen/_20sp"
                        android:layout_marginStart="@dimen/_15dp"
                        android:textColor="@color/black"/>
                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="@dimen/_30dp"
                        android:layout_height="@dimen/_30dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_loanOption"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="@dimen/_11dp"
                        app:layout_constraintTop_toTopOf="@+id/tv_loanOption"
                        app:srcCompat="@drawable/bank_arrow" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/Layout_Has_loan"
            android:layout_width="match_parent"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            android:layout_marginTop="@dimen/_20dp"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_has_Loan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:itemCount="2"
                tools:listitem="@layout/loan_options_item_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layout_NoLoan"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/cardView"
            android:layout_marginTop="@dimen/_20dp"
            android:visibility="gone"
            android:layout_height="wrap_content">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_NoLoan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/_30dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_10dp"
                android:layout_marginEnd="@dimen/_10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:itemCount="2"
                tools:listitem="@layout/loan_options_item_list" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>