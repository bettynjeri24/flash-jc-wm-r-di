<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        android:layout_height="wrap_content">

     <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cardview_image"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_accountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/textacName"
                    app:layout_constraintBottom_toBottomOf="@+id/textacName"
                    tools:text="5689iirotutuut" />
                <TextView
                    android:id="@+id/textacName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="10dp"
                    tools:text="@string/dividend"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <TextView
                    android:id="@+id/tvAvailBal"
                    android:layout_width="wrap_content"
                    app:layout_constraintStart_toStartOf="@+id/textacName"
                    app:layout_constraintTop_toBottomOf="@+id/textacName"
                    android:layout_height="wrap_content"
                    android:text="@string/avail_bal"/>
                <TextView
                    android:id="@+id/tvAvailBalValue"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    app:layout_constraintStart_toStartOf="@+id/textacName"
                    app:layout_constraintTop_toBottomOf="@+id/tvAvailBal"
                    android:layout_height="wrap_content"
                    tools:text="300000"/>
                <View
                    android:layout_width="@dimen/_2dp"
                    android:layout_marginTop="@dimen/_2dp"
                    android:layout_height="@dimen/_25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textacName"
                    android:background="@color/hintColor"/>
                <TextView
                    android:id="@+id/tvActulBal"
                    android:layout_width="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_10dp"
                    app:layout_constraintTop_toTopOf="@+id/tvAvailBal"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAvailBal"
                    android:layout_height="wrap_content"
                    android:text="Actual Balance:"/>
                <TextView
                    android:id="@+id/tvAcBalValue"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="@dimen/_15dp"
                    app:layout_constraintBottom_toBottomOf="@+id/tvAvailBalValue"
                    app:layout_constraintTop_toTopOf="@+id/tvAvailBalValue"
                    android:layout_height="wrap_content"
                    tools:text="300000"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/cl_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_10dp"
                    android:paddingBottom="@dimen/_5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvAvailBalValue"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewBal"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35dp"
                        android:layout_marginStart="@dimen/_10dp"
                        android:background="@drawable/btn_bg_transparent"
                        android:text="View Balance"
                        app:layout_constraintTop_toTopOf="parent"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sp"
                        android:textAlignment="center"
                        android:theme="@style/ButtonTheme"
                        android:layout_marginEnd="@dimen/_2dp"
                        app:layout_constraintEnd_toStartOf="@+id/btn_state"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintStart_toStartOf="parent" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_state"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_35dp"
                        android:textAlignment="center"
                        android:layout_marginEnd="@dimen/_18dp"
                        android:layout_marginStart="@dimen/_2dp"
                        android:background="@drawable/btn_bg_transparent"
                        app:layout_constraintTop_toTopOf="@+id/btnViewBal"
                        android:text="@string/statements"
                        android:textAllCaps="false"
                        android:textColor="@color/textColor"
                        android:textSize="@dimen/_12sp"
                        android:theme="@style/ButtonTheme"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/btnViewBal" />
                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>


</layout>