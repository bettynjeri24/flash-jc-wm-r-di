<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100dp"
            android:background="@color/textColor"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:fitsSystemWindows="true"
            >
            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/toolbar_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">
                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/custom_toolbar"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    app:layout_collapseMode="pin"
                    android:background="@color/textColor"
                    android:layout_height="?attr/actionBarSize"
                    >
                    <include
                        android:id="@+id/toolbar"
                        layout="@layout/custom_toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize" />
                </androidx.appcompat.widget.Toolbar>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_marginBottom="@dimen/_30dp"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"
         >
            <androidx.constraintlayout.widget.ConstraintLayout
                android:paddingBottom="@dimen/_30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clDetail"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:layout_marginStart="@dimen/_10dp"
                    android:paddingBottom="@dimen/_15dp">
                    <TextView
                        android:id="@+id/tv_transType"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="@dimen/_15sp"
                        tools:text="Transfer Type"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />


                    <TextView
                        android:id="@+id/tv_shareTT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_14sp"
                        android:text="@string/member_name"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_transType" />

                    <TextView
                        android:id="@+id/text_ShareTT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_shareTT"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_shareTT"
                        tools:text="20000" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_14sp"
                        android:text="@string/member_number"
                        app:layout_constraintStart_toStartOf="@+id/tv_shareTT"
                        app:layout_constraintTop_toBottomOf="@+id/tv_shareTT" />

                    <TextView
                        android:id="@+id/text_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                       android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_name"
                        tools:text="20000" />

                    <TextView
                        android:id="@+id/tv_MNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_14sp"
                        android:text="@string/amoun"
                        app:layout_constraintStart_toStartOf="@+id/tv_name"
                        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

                    <TextView
                        android:id="@+id/text_MNo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:textSize="@dimen/_14sp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_MNo"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_MNo"
                        tools:text="20000" />
                    <TextView
                        android:id="@+id/tv_m0bileN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_14sp"
                        android:text="@string/percentage"
                        app:layout_constraintStart_toStartOf="@+id/tv_MNo"
                        app:layout_constraintTop_toBottomOf="@+id/tv_MNo"  />

                    <TextView
                        android:id="@+id/text_m0bileN"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14sp"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_m0bileN"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_m0bileN"
                        tools:text="20000" />

                    <TextView
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:textSize="@dimen/_14sp"
                        android:text="Status"
                        app:layout_constraintStart_toStartOf="@+id/tv_m0bileN"
                        app:layout_constraintTop_toBottomOf="@+id/tv_m0bileN" />

                    <TextView
                        android:id="@+id/text_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:textSize="@dimen/_14sp"
                        android:textColor="@color/textColor"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_status"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/tv_status"
                        tools:text="20000" />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnAccept"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginBottom="@dimen/_20dp"
                    android:theme="@style/ButtonTheme"
                    app:layout_constraintBottom_toTopOf="@id/btnReject"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:background="@drawable/btn_normal_bg"
                    android:text="@string/accept_request"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnReject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_10dp"
                    android:layout_marginTop="@dimen/_20dp"
                    android:theme="@style/ButtonTheme"
                    android:layout_marginEnd="@dimen/_10dp"
                    android:background="@drawable/btn_less_radius"
                    android:text="@string/reject_request"
                    android:textColor="@color/textColor"
                    android:textSize="@dimen/_16sp"
                    android:textStyle="bold" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</layout>