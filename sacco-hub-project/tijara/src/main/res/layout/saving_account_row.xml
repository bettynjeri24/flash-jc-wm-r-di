<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <androidx.cardview.widget.CardView
        android:id="@+id/cardLoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_3dp"
        app:cardBackgroundColor="@color/grey_100"
        app:cardCornerRadius="@dimen/_5dp"
        app:cardUseCompatPadding="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ConstraintLoan"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70dp">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/viewLine"
                android:layout_width="@dimen/_55dp"
                android:layout_height="@dimen/_55dp"
                android:layout_margin="10dp"
                android:background="@drawable/white_circle_bg"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/sInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:paddingRight="@dimen/_5dp"
                app:layout_constraintBottom_toBottomOf="@+id/viewLine"
                app:layout_constraintEnd_toEndOf="@+id/viewLine"
                app:layout_constraintStart_toStartOf="@+id/viewLine"
                app:layout_constraintTop_toTopOf="@+id/viewLine"
                tools:text="DM" />



            <TextView
                android:id="@+id/tvHolder"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:textSize="@dimen/_14sp"
                android:layout_marginTop="@dimen/_10dp"
                android:layout_marginStart="@dimen/_10dp"
                app:layout_constraintStart_toEndOf="@+id/viewLine"
                app:layout_constraintBottom_toTopOf="@+id/tvNo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread"
                tools:text="Loan Option" />

            <TextView
                android:id="@+id/tvNo"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/_5dp"
                android:textSize="@dimen/_14sp"
                app:layout_constraintStart_toStartOf="@+id/tvHolder"
                app:layout_constraintTop_toBottomOf="@+id/tvHolder"
                tools:text="Loan Option" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="@dimen/_25dp"
                android:layout_height="@dimen/_25dp"
                android:layout_marginEnd="@dimen/_11dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bank_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</layout>