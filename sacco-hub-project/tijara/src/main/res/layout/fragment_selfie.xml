<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/_30dp"
        >
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tlBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

        <ImageView
            android:id="@+id/imageBack"
            android:layout_width="wrap_content"
            app:tint="@color/black"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/ic_baseline_arrow_back_24"/>

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tlBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:textColor="@color/black"
        android:textSize="@dimen/_16sp"
        android:textStyle="bold"
        android:text="@string/kindly_provide_us_with_your_selfie" />
    <TextView
        android:id="@+id/tv_titleverify"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/_15dp"
        android:layout_marginEnd="@dimen/_15dp"
        android:textColor="@color/hintColor"
        android:textSize="@dimen/_13sp"
        android:text="@string/take_a_selfie_and_we_will_do_a_face_match_with_the_photo_on_your_national_id"/>
    <ProgressBar
        android:id="@+id/pb_test"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:indeterminate="false"
        android:layout_marginEnd="@dimen/_15dp"
        android:layout_marginStart="@dimen/_15dp"
        android:progress="80"
        android:progressTint="@color/buttonColor"
        app:layout_constraintTop_toBottomOf="@+id/tv_titleverify"
        android:max="100"
        />
    <TextView
        android:id="@+id/percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/_12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/pb_test"
        android:layout_marginEnd="@dimen/_15dp"
        android:text="80%"/>
        <ImageView
            android:id="@+id/selfie_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/percent"
            app:layout_constraintBottom_toTopOf="@+id/btnTakeSelfie"
            android:src="@drawable/ic_selfie"/>
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/selfieTaken"
            android:layout_width="@dimen/_170dp"
            android:layout_height="@dimen/_170dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/percent"
            app:layout_constraintBottom_toTopOf="@+id/btnTakeSelfie"
            tools:src="@drawable/ic_selfie"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnContinue"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonTheme"
            android:background="@drawable/btn_normal_bg"
            android:text="@string/continu"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sp"
            android:layout_marginTop="@dimen/_50dp"

            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_15dp"
            android:visibility="gone"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnTakeSelfie"
            android:layout_marginBottom="@dimen/_20dp"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnTakeSelfie"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:theme="@style/ButtonTheme"
            android:background="@drawable/btn_normal_bg"
            android:text="Take Selfie"
            android:textAllCaps="true"
            android:textSize="@dimen/_14sp"
            android:layout_marginTop="@dimen/_50dp"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/_15dp"
            android:layout_marginStart="@dimen/_15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/_20dp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>