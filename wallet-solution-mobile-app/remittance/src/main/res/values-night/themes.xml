<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AQUARIUS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_orange</item>
        <item name="colorPrimaryVariant">@color/dark_orange</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorBlue</item>
        <item name="colorSecondaryVariant">@color/colorBlue</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <!--EditText Common style-->
    <style name="EditText_Common_style">
        <item name="android:gravity">start</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Body2</item>
        <item name="android:theme">@style/EditText_Common_Theme</item>
    </style>

    <style name="EditText_Common_Theme">
        <item name="colorControlNormal">#ff969696</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorAccent</item>
    </style>

    <style name="MaterialButtonDefaultStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/colorBlue</item>
        <item name="rippleColor">@color/colorBlue</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/material_button_conner_radius</item>
    </style>

    <style name="MaterialButton" parent="Widget.MaterialComponents.Button">
        <item name="background">@color/colorBlue</item>
        <item name="backgroundColor">@color/colorBlue</item>
    </style>
    <style name="MaterialButtonWhite" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/colorBlue</item>
        <item name="android:textSize">16sp</item>

        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">@dimen/material_button_conner_radius</item>
    </style>

    <style name="MaterialButtonBlue" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/transparent</item>
        <item name="rippleColor">@android:color/transparent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/colorWhite</item>

        <item name="android:fontFamily">@font/nunito_sans</item>

    </style>

    <style name="TextInputLayoutOutline" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/colorWhite</item>
        <item name="android:paddingBottom">0dp</item>
    </style>

    <style name="mySpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">@color/colorAccent</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

</resources>