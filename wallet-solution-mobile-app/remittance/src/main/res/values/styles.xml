<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="otp_views" >
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">65dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:maxWidth">90dp</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">number</item>
        <item name="android:maxLength">1</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:backgroundTint">@color/otp_input</item>
    </style>

    <!-- otp textviews -->
    <style name="otp_texts">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/nunito_sans_light</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/click_bg</item>
    </style>

    <style name="card_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">8dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>


    <style name="send_confirmation_card_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">0dp</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0.0px</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:clipChildren">false</item>
    </style>

    <!--page top text messages style-->
    <style name="pageTopMessagesStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:paddingStart">@dimen/margin_padding_normal</item>
        <item name="android:paddingEnd">@dimen/margin_padding_normal</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="circleImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:background">@color/white</item>
    </style>

</resources>