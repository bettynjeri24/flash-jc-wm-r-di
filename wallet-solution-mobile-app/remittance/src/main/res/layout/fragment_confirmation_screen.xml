<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/ic_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/layout_header"
            layout="@layout/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"

            android:fontFamily="@font/nunito_sans_bold"
            android:paddingBottom="@dimen/layout_margin"
            android:text="To Ann Njoki | 7932-2354-2545"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_medium"
            app:layout_constraintTop_toBottomOf="@id/layout_header" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin"
        app:layout_constraintTop_toBottomOf="@id/layout_top">

        <TextView
            android:id="@+id/tvBuyaitimefrom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:text="@string/str_buy_artime_from"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/textsize_medium_small_static"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardrecipient"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            app:cardBackgroundColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/tvBuyaitimefrom">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin">

                <ImageView
                    android:id="@+id/imgArrowForward"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/arrow_forward"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/colorBlack" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgSender"
                    android:layout_width="@dimen/confirm_img_height"
                    android:layout_height="@dimen/confirm_img_height"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:src="@mipmap/avator"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/imgArrowForward"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="You"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/textsize_medium_small_static"
                    app:layout_constraintEnd_toEndOf="@id/imgSender"
                    app:layout_constraintStart_toStartOf="@id/imgSender"
                    app:layout_constraintTop_toBottomOf="@id/imgSender" />


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgRecipient"
                    android:layout_width="@dimen/confirm_img_height"
                    android:layout_height="@dimen/confirm_img_height"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:src="@mipmap/usericon"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintRight_toLeftOf="@id/imgArrowForward"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="7932-2354-2545"
                    android:textAlignment="center"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/textsize_medium_small_static"
                    app:layout_constraintEnd_toEndOf="@id/imgRecipient"
                    app:layout_constraintTop_toBottomOf="@id/imgRecipient" />
            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_margin"
            android:text="@string/str_amount"
            android:textColor="@color/colorBlackText"
            android:textSize="@dimen/textsize_medium_small_static"
            app:layout_constraintTop_toBottomOf="@id/cardrecipient" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            app:cardBackgroundColor="@color/colorWhite"
            app:layout_constraintTop_toBottomOf="@id/tvAmount">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin">

                <TextView
                    android:id="@+id/tvTransferAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11427.42"
                    android:textColor="@color/colorBlackText"
                    android:textSize="35sp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/large_layout_margin"
                    android:text="GHS"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/tvTransferAmount" />

                <View
                    android:id="@+id/vAmount"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_marginStart="@dimen/layout_margin"
                    android:layout_marginTop="35dp"
                    android:layout_marginEnd="@dimen/layout_margin"
                    android:background="@color/colorBlackText"
                    android:paddingTop="@dimen/layout_margin"
                    app:layout_constraintTop_toBottomOf="@id/tvTransferAmount" />

                <TextView
                    android:id="@+id/tvTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    android:text="@string/str_tax"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/textsize_small"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="@id/vAmount"
                    app:layout_constraintTop_toBottomOf="@id/vAmount" />

                <TextView
                    android:id="@+id/tvActualTax"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    android:text="GHS..  40"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/textsize_small"
                    app:layout_constraintEnd_toEndOf="@id/vAmount"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/vAmount" />

                <TextView
                    android:id="@+id/tvTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    android:text="@string/str_amount"
                    android:textColor="@color/colorBlackText"
                    android:textSize="@dimen/textsize_small"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tvTax"
                    app:layout_constraintTop_toBottomOf="@id/tvTax" />

                <TextView
                    android:id="@+id/tvActualTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    android:text="GHS..  114754.24"
                    android:textColor="@color/colorBlackText"

                    android:textSize="@dimen/textsize_small"
                    app:layout_constraintEnd_toEndOf="@id/vAmount"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvActualTax" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            style="@style/MaterialButtonDefaultStyle"
            android:id="@+id/btnConfirmTrans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:layout_marginTop="@dimen/large_layout_margin"
            android:layout_marginEnd="@dimen/layout_margin"
            android:layout_marginBottom="50dp"
            android:padding="10dp"
            android:paddingBottom="@dimen/large_layout_margin"
            android:text="@string/btn_continue_title"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cardAmount" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>