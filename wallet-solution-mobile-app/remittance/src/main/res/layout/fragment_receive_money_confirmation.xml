<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/appbar"
            layout="@layout/layout_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvSendTo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/layout_margin"
            android:fontFamily="@font/nunito_sans_bold"
            android:paddingBottom="@dimen/layout_margin"
            android:text="~ | ~"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_medium"
            android:visibility="visible"
            app:layout_constraintTop_toBottomOf="@id/layout_header" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="0dp">

            <TextView
                android:id="@+id/tvRemittancetitle"
                style="@style/pageTopMessagesStyle"
                android:paddingStart="25dp"
                android:paddingTop="10dp"
                android:paddingBottom="1dp"
                android:text="Confirm &amp; Receive payments"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvReceiveFromNarration"
                android:layout_width="match_parent"
                android:paddingStart="25dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="@string/str_send_money_to"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvRemittancetitle" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReceiverInfo"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="14dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@id/tvReceiveFromNarration"/>


            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAmount"
                style="@style/card_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                app:cardBackgroundColor="@android:color/transparent"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toBottomOf="@id/rvReceiverInfo">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/ic_receipt_shape"
                    android:backgroundTint="#f4f4f4"
                    android:padding="@dimen/layout_margin">

                    <View
                        android:id="@+id/vAmount3"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#f4f4f4"
                        app:layout_constraintTop_toBottomOf="@+id/tvActualTax"
                        tools:layout_editor_absoluteX="-3dp" />

                    <View
                        android:id="@+id/vAmount2"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="4dp"
                        android:background="#f4f4f4"
                        app:layout_constraintTop_toBottomOf="@+id/tvGrossValue"
                        tools:layout_editor_absoluteX="16dp" />

                    <TextView
                        android:id="@+id/tvGross"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="18dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="Gross Amount"
                        android:textColor="@color/txtGray"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/vAmount2"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tvGrossValue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nunito_sans"
                        android:text="GHS 0.00"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/textsize_small"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/tvGross"
                        app:layout_constraintTop_toBottomOf="@+id/tvGross" />

                    <TextView
                        android:id="@+id/tvTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="@string/str_tax"
                        android:textColor="@color/txtGray"
                        android:textSize="16sp"
                        app:layout_constraintStart_toStartOf="@+id/tvGross"
                        app:layout_constraintTop_toBottomOf="@+id/tvGrossValue" />

                    <TextView
                        android:id="@+id/tvActualTax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:fontFamily="@font/nunito_sans"
                        android:text="GHS 0.00"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/textsize_small"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="@+id/tvTax"
                        app:layout_constraintTop_toBottomOf="@+id/tvTax" />

                    <TextView
                        android:id="@+id/tvTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/nunito_sans_bold"
                        android:text="@string/str_total"
                        android:textColor="@color/txtGray"
                        android:textSize="16sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintStart_toStartOf="@id/tvTax"
                        app:layout_constraintTop_toBottomOf="@+id/tvActualTax" />

                    <TextView
                        android:id="@+id/tvActualTotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="32dp"
                        android:fontFamily="@font/nunito_sans"
                        android:text="GHS 0.00"
                        android:textColor="@color/colorBlackText"
                        android:textSize="@dimen/textsize_small"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/tvTotal"
                        app:layout_constraintTop_toBottomOf="@+id/tvTotal" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tvRecv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/layout_margin"
                android:fontFamily="@font/nunito_sans_bold"
                android:text="Receive money into:"
                android:textColor="@color/colorBlackText"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/cardAmount" />

            <RadioGroup
                android:id="@+id/rg_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_marginTop="8dp"
                android:paddingStart="@dimen/medium_margin"
                android:paddingEnd="@dimen/medium_margin"
                app:layout_constraintTop_toBottomOf="@id/tvRecv">

                <RadioButton
                    android:id="@+id/rb_wallet"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:checked="true"
                    android:drawablePadding="@dimen/main_margin"
                    android:fontFamily="@font/nunito_sans"
                    android:text="Wallet"
                    android:textColor="@android:color/black"
                    android:textSize="14sp" />
                <RadioButton
                    android:id="@+id/rb_mmoney"
                    android:text="Mobile Money"
                    android:fontFamily="@font/nunito_sans"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/main_margin"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

                <RadioButton
                    android:id="@+id/rb_acc"
                    android:text="Bank Account"
                    android:fontFamily="@font/nunito_sans"
                    android:textSize="14sp"
                    android:visibility="visible"
                    android:textColor="@android:color/black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawablePadding="@dimen/main_margin"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content" />

            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tl_account"
                style="@style/TextInputLayoutOutline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:visibility="invisible"
                android:layout_marginEnd="10dp"
                app:boxStrokeColor="@color/lightGray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/rg_payment"
                app:layout_constraintTop_toBottomOf="@id/rg_payment">

                <com.google.android.material.textfield.MaterialAutoCompleteTextView
                    android:id="@+id/et_accts"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:completionThreshold="0"
                    android:hint="@string/select_account"
                    android:imeOptions="actionDone"
                    android:inputType="none"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp" />

            </com.google.android.material.textfield.TextInputLayout>



            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnConfirmTrans"
                style="@style/MaterialButtonDefaultStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="@dimen/main_margin"
                android:layout_marginStart="@dimen/main_margin"
                android:text="@string/btn_continue_title"
                android:textColor="@color/white"
                android:fontFamily="@font/nunito_sans"
                android:textSize="14sp"
                app:cornerRadius="12dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tl_account" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>