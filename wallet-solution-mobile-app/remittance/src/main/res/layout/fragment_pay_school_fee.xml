<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/ic_bg"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_top"
        android:background="@color/colorPrimary"
        >
        <include
            layout="@layout/header_layout"
            android:id="@+id/layout_header"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_header"

            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="@dimen/textsize_medium"
            android:layout_marginStart="@dimen/layout_margin"
            android:text=""
            android:paddingBottom="@dimen/layout_margin"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        android:layout_margin="@dimen/layout_margin"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/layout_school"
            android:layout_marginBottom="@dimen/layout_margin">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@mipmap/avator"
                android:id="@+id/imgProfile"
                app:layout_constraintTop_toTopOf="parent"
               
                app:layout_constraintLeft_toLeftOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/imgProfile"
                app:layout_constraintTop_toTopOf="parent"
                android:textSize="@dimen/textsize_small"
                android:text="Alladin Nginyo"
                android:textColor="@color/colorBlackText"
                android:id="@+id/tvName"
                android:layout_marginTop="@dimen/medium_layout_margin"
                android:layout_marginStart="@dimen/layout_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvIdNo"
                android:text="Grade: 5"
                android:textColor="@color/colorBlackText"
                app:layout_constraintStart_toEndOf="@id/imgProfile"
                app:layout_constraintTop_toBottomOf="@id/tvName"
                android:layout_marginStart="@dimen/layout_margin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvAdmNo"
                android:text="Adm No: UON 1455"
                android:textColor="@color/colorBlackText"
                app:layout_constraintStart_toEndOf="@id/imgProfile"
                app:layout_constraintTop_toBottomOf="@id/tvIdNo"
                android:layout_marginStart="@dimen/layout_margin"/>
           
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:id="@+id/vFee"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintTop_toBottomOf="@id/tvAdmNo"
                android:background="@color/lightGray"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_payment_details"
               app:layout_constraintTop_toBottomOf="@id/vFee"
                android:textColor="@color/colorBlackText"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/layout_margin"
                android:id="@+id/tvAgentNumber"
                android:textSize="@dimen/textsize_small"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvFeeAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintTop_toBottomOf="@id/tvAgentNumber"
                style="@style/TextInputLayoutOutline"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etStudentNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_fee_amount"
                    android:imeOptions="actionNext"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvSchoolAcc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintTop_toBottomOf="@id/tvFeeAmount"
                style="@style/TextInputLayoutOutline"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_school_no"
                    android:imeOptions="actionNext"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvNarration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintTop_toBottomOf="@id/tvSchoolAcc"
                style="@style/TextInputLayoutOutline"

                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNarration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/str_payment_purpose"
                    android:imeOptions="actionNext"
                    android:inputType="text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/str_pay_from"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintTop_toBottomOf="@id/tvNarration"
                android:id="@+id/tvBrand"/>
            <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/spn_payfrom"
                android:layout_width="0dp"
                android:layout_height="@dimen/spiner_height"
                android:layout_marginTop="@dimen/layout_margin"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:orientation="horizontal"

                app:layout_constraintTop_toBottomOf="@id/tvBrand"/>
            <View
                android:id="@+id/vBrand"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="8dp"
                android:background="#61272727"
                app:layout_constraintTop_toBottomOf="@id/spn_payfrom"
                app:layout_constraintStart_toStartOf="@id/spn_payfrom"
                app:layout_constraintEnd_toEndOf="@id/spn_payfrom"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPayFee"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/large_layout_margin"
                android:layout_marginBottom="50dp"
                android:paddingBottom="@dimen/large_layout_margin"
                android:padding="10dp"
                android:text="@string/btn_pay_fee"
android:textAllCaps="false"
                app:cornerRadius="50dp"
                app:layout_constraintTop_toBottomOf="@id/vBrand"
                app:layout_constraintEnd_toEndOf="parent"
                style="@style/MaterialButtonDefaultStyle"
                app:layout_constraintStart_toStartOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>