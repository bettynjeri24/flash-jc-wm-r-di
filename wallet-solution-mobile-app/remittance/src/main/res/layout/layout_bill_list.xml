<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/medium_layout_margin"
    android:layout_marginTop="@dimen/text_size_xtiny"
    android:layout_marginBottom="@dimen/text_size_xtiny"
    android:layout_marginEnd="4dp"
    app:cardCornerRadius="6dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false"
    android:backgroundTint="#f4f4f4"
    android:background="@drawable/card_container_bg_gray">

    <LinearLayout
        android:id="@+id/ly_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_bill_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_padding_tiny"
                android:scaleType="centerInside"
                app:shapeAppearanceOverlay="@style/circleImageView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@mipmap/sendmoney" />

            <TextView
                android:id="@+id/iv_bill_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="24dp"
                android:fontFamily="@font/nunito_sans_bold"
                android:gravity="start"
                android:maxLines="2"
                android:text="@string/str_send_money"
                android:textColor="@color/colorBlackText"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_bill_icon"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_bill_icon"
                app:layout_constraintTop_toTopOf="@+id/iv_bill_icon" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
