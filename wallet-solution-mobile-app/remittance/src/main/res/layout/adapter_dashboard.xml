<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/card_style"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginStart="@dimen/small_margin"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="@dimen/small_margin"
    android:layout_marginBottom="@dimen/small_margin"
    android:elevation="0dp"
    app:cardBackgroundColor="@color/colorPrimaryDark"
    app:cardCornerRadius="10dp"
    app:cardElevation="0dp"
    app:cardUseCompatPadding="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="@drawable/card_container_bg_gray"
        android:padding="@dimen/small_margin">


        <ImageView
            android:id="@+id/iv_menu_icon"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/sendmoney_custom" />

        <ImageView
            android:id="@+id/iv_menu_icon2"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:src="@drawable/arrow_right"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_menu_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="14dp"
            android:fontFamily="@font/nunito_sans_bold"
            android:textAlignment="textStart"
            android:textAllCaps="true"
            android:textColor="@color/colorBlackText"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/iv_menu_icon"
            app:layout_constraintEnd_toStartOf="@+id/iv_menu_icon2"
            app:layout_constraintStart_toEndOf="@+id/iv_menu_icon"
            app:layout_constraintTop_toTopOf="@+id/iv_menu_icon"
            tools:text="Open Issues" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
