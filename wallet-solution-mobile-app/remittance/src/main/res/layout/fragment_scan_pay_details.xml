<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/ic_bg"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_top"
        android:background="@color/colorPrimary"
        >
        <include
            layout="@layout/header_layout"
            android:id="@+id/layout_header"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_header"

            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="@dimen/textsize_medium"
            android:layout_marginStart="@dimen/layout_margin"
            android:text="~"
            android:paddingBottom="@dimen/layout_margin"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        android:layout_margin="@dimen/layout_margin"
        >
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlMerchantId"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintTop_toTopOf="parent"
            style="@style/TextInputLayoutOutline"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_merchant_id"
                android:imeOptions="actionNext"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            android:fontFamily="@font/nunito_sans"
            android:textColor="@color/colorBlue"
            android:id="@+id/tvMerchant"
            app:layout_constraintTop_toBottomOf="@id/tlMerchantId"
            android:text="@string/str_merchant_details"/>
        <androidx.cardview.widget.CardView
            android:id="@+id/cardMerchantData"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin"
            android:background="@drawable/rectangular_dotted"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/medium_layout_margin"
            android:elevation="5dp"
            android:paddingLeft="@dimen/medium_layout_margin"
            android:layout_marginBottom="@dimen/layout_margin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvMerchant">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/layout_margin"

                >
                <View
                    android:layout_width="10dp"
                    android:layout_height="2dp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/vGuideline"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Account Number: ~"
                    android:fontFamily="@font/nunito_sans_bold"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="@dimen/layout_margin"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tvAccNumber"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMerchantTitle"
                    android:text="@string/str_phone_number"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    app:layout_constraintTop_toBottomOf="@id/tvAccNumber"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:fontFamily="@font/nunito_sans_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvMerchantBranch"
                    android:text="@string/str_merchant_branch"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    app:layout_constraintTop_toBottomOf="@id/tvAccNumber"
                    app:layout_constraintStart_toEndOf="@id/vGuideline"
                    android:fontFamily="@font/nunito_sans_light"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvPhoneNumber"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    app:layout_constraintTop_toBottomOf="@id/tvMerchantTitle"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:textColor="@color/colorBlackText"
                    android:fontFamily="@font/nunito_sans"
                    android:text="+256 755222235"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvBranch"
                    android:layout_marginTop="@dimen/medium_layout_margin"
                    app:layout_constraintTop_toBottomOf="@id/tvMerchantTitle"
                    app:layout_constraintStart_toEndOf="@id/vGuideline"
                    android:fontFamily="@font/nunito_sans"
                    android:textColor="@color/colorBlackText"
                    android:text="Mwatuini Road"/>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tlEnterAmount"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintTop_toBottomOf="@id/cardMerchantData"
            style="@style/TextInputLayoutOutline"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etAmount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/str_payment_purpose"
                android:imeOptions="actionNext"
                android:inputType="number" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/str_pay_from"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintTop_toBottomOf="@id/tlEnterAmount"
            android:id="@+id/tvBrand"/>
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spn_fundfrom"
            android:layout_width="0dp"
            android:layout_height="@dimen/spiner_height"
            android:layout_marginTop="@dimen/layout_margin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"

            app:layout_constraintTop_toBottomOf="@id/tvBrand"/>
        <View
            android:id="@+id/vBrand"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_marginStart="4dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="8dp"
            android:background="#61272727"
            app:layout_constraintTop_toBottomOf="@id/spn_fundfrom"
            app:layout_constraintStart_toStartOf="@id/spn_fundfrom"
            app:layout_constraintEnd_toEndOf="@id/spn_fundfrom"/>



        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnScanDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/large_layout_margin"
            android:layout_marginBottom="40dp"
            android:paddingBottom="@dimen/large_layout_margin"
            android:padding="10dp"
            android:textAllCaps="false"
            android:text="@string/btn_continue_title"
            style="@style/MaterialButtonDefaultStyle"
            app:cornerRadius="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>