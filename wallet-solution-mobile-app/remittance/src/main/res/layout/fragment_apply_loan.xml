<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/ic_bg"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/layout_top"
        android:background="@color/colorPrimary"
        >
        <include
            layout="@layout/header_layout"
            android:id="@+id/layout_header"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_header"

            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nunito_sans_bold"
            android:textSize="@dimen/textsize_small"
            android:layout_marginStart="@dimen/layout_margin"
            android:paddingBottom="@dimen/layout_margin"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout_top"
        app:layout_constraintBottom_toBottomOf="parent"
        android:fillViewport="true">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_top"
            android:layout_margin="@dimen/layout_margin"
            >
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/tvUserhead"
    android:text="@string/str_congraturation"
    android:textSize="@dimen/textsize_large"
    android:textAlignment="center"
    app:layout_constraintTop_toTopOf="parent"
    android:textColor="@color/colorBlue"
    android:layout_marginTop="@dimen/large_layout_margin"/>
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/str_loan_limit_desc"
    android:textAlignment="center"
    app:layout_constraintTop_toBottomOf="@id/tvUserhead"
    android:layout_marginTop="@dimen/medium_layout_margin"
    android:id="@+id/tvLimitDesc"
    android:textColor="@color/colorBlue"/>
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tlAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_margin="@dimen/large_layout_margin"
              app:layout_constraintTop_toBottomOf="@id/tvLimitDesc"
                style="@style/TextInputLayoutOutline"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etDescription"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/large_layout_margin"
                    android:hint="@string/str_enter_amount_to_apply"
                    android:imeOptions="actionNext"
                    android:inputType="number" />
            </com.google.android.material.textfield.TextInputLayout>
            <View
                android:layout_width="20dp"
                android:layout_height="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                android:id="@+id/vGuideline"
                app:layout_constraintRight_toRightOf="parent"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintEnd_toStartOf="@id/vGuideline"
                app:layout_constraintTop_toBottomOf="@id/tlAmount"
                android:layout_marginTop="@dimen/large_layout_margin"
               android:layout_marginStart="@dimen/large_layout_margin"
                android:text="@string/str_amount_applied"
                android:id="@+id/tvAmountApplied"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
               app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vGuideline"
                app:layout_constraintTop_toBottomOf="@id/tlAmount"
                android:layout_marginTop="@dimen/large_layout_margin"
                android:text="GHS..  1,000"
                android:layout_marginStart="@dimen/large_layout_margin"
                android:id="@+id/tvActualAmount"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/vGuideline"
                app:layout_constraintTop_toBottomOf="@id/tvAmountApplied"
                android:layout_marginTop="@dimen/large_layout_margin"
                android:layout_marginStart="@dimen/large_layout_margin"
                android:text="@string/str_charges"
                android:id="@+id/tvCharges"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/vGuideline"
                app:layout_constraintTop_toBottomOf="@id/tvActualAmount"
                android:layout_marginTop="@dimen/large_layout_margin"
                android:text="GHS..  500"
                android:layout_marginStart="@dimen/large_layout_margin"
                android:id="@+id/tvActualCharges"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>