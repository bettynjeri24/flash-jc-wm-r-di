<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginTop="@dimen/medium_layout_margin"

    android:background="@android:color/transparent"
    android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="ID - XC152225MT"
    android:textSize="@dimen/textsize_small"
    android:fontFamily="@font/nunito_sans_bold"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    android:id="@+id/txtTranssName"/>
    <ImageView
        android:layout_width="10dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/txtAmount"
        android:src="@drawable/ic_remove"
        android:id="@+id/imgStatus"
        app:tint="@color/colorBlack" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/colorBlackText"
        android:text="GHS..  22,000"
        android:id="@+id/txtAmount"
        android:paddingBottom="@dimen/margin_padding_small"
        android:textSize="@dimen/textsize_small"
        app:layout_constraintTop_toTopOf="parent"
        android:fontFamily="@font/nunito_sans_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/txtTranssName"
        android:fontFamily="@font/nunito_sans"
        android:id="@+id/txtTransferTo"
        android:paddingTop="@dimen/margin_padding_small"
        android:paddingBottom="@dimen/medium_layout_margin"
        android:textSize="@dimen/textsize_smaller"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Send Money To MTN Money"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDate"
        app:layout_constraintTop_toBottomOf="@id/txtAmount"
        app:layout_constraintEnd_toEndOf="@id/txtAmount"
        android:textSize="@dimen/textsize_smaller"
        android:fontFamily="@font/nunito_sans"
        android:text="11 Jun 2020"/>

</androidx.constraintlayout.widget.ConstraintLayout>