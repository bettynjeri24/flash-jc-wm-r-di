<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/onboard_bg">

    <include
        android:id="@+id/layout_header"
        layout="@layout/header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        app:layout_constraintTop_toBottomOf="@id/layout_header" >

        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/nunito_sans"
            android:text="@string/enter_4_digit_code_instr"
            tools:text="Enter the 4-digit code sent to you at +254 708 396 345"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/textsize_medium_small"
            app:layout_constraintTop_toTopOf="parent"
             />

        <LinearLayout
            android:id="@+id/layoutOtp"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_margin="36dp"
            android:orientation="horizontal"
            android:weightSum="4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_description">

            <EditText
                android:id="@+id/et1"
                style="@style/otp_views"
                android:imeOptions="actionNext"
                tools:text="5" />

            <EditText
                android:id="@+id/et2"
                style="@style/otp_views"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/et3"
                style="@style/otp_views"
                android:imeOptions="actionNext" />

            <EditText
                android:id="@+id/et4"
                style="@style/otp_views"
                android:imeOptions="actionGo" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_timeout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/medium_layout_margin"
            android:layout_marginTop="@dimen/layout_margin"
            android:fontFamily="@font/nunito_sans_bold"
            android:text="@string/resend_code_timeout"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="@dimen/textsize_medium_small"
            app:layout_constraintEnd_toEndOf="@id/layoutOtp"
            app:layout_constraintStart_toStartOf="@id/layoutOtp"
            app:layout_constraintTop_toBottomOf="@id/layoutOtp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnVerification"
            style="@style/MaterialButtonDefaultStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btn_continue_title"
            app:layout_constraintBottom_toBottomOf="parent"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>