<resources xmlns:tools="http://schemas.android.com/tools">


    <style name="Onboarding_buttons_style">
        <item name="android:backgroundTint">@android:color/transparent</item>
        <item name="cornerRadius">10dp</item>
        <item name="android:padding">18dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        </style>
    <style name="profilecards_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="cardCornerRadius">7dp</item>
        <item name="android:background">@color/bottomsheet_greycolor</item>
        <item name="android:elevation">0dp</item>

    </style>
    <style name="pin_views">
        <item name="android:layout_marginStart">12dp</item>
        <item name="android:background">@drawable/inactive_pinview_bg</item>

        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_height">16dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_width">16dp</item>
    </style>
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="billpayments_options_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#1319cd</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@drawable/grey_round_bgwithnoborder</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    <style name="profile_textview_style">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:padding">18dp</item>
        <item name="android:background">@drawable/grey_round_bgwithnoborder</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
    </style>
    <style name="spinner_style"  >
        <!-- For the resting Spinner style -->
        <item name="spinnerStyle">
            @style/spinnerItemStyle
        </item>

        <!-- For each individual Spinner list item once clicked on -->
        <item name="spinnerDropDownItemStyle">
            @style/spinnerDropDownItemStyle
        </item>

    </style>
    <style name="spinnerItemStyle">
        <item name="android:padding">10dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="spinnerDropDownItemStyle">
        <item name="android:padding">20dp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="Toolbar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">10sp</item>
        <item name="android:drawablePadding">12dp</item>

    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="CircularDeterminateProgressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/circle</item>
    </style>

    <style name="ThemeActionBar"
        parent="Widget.AppCompat.Light.ActionBar.Solid">
        <item name="android:background">@null</item>
        <!-- Support library compatibility -->
        <item name="background">@null</item>
    </style>

    <style name="Theme.ETourism" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
      <!--  <item name="colorPrimary">@color/app_red</item>
        <item name="android:textColor">@color/black</item>

        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/app_red</item> --><!-- Whatever color you want-->

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

        <item name="android:statusBarColor" tools:targetApi="l">@android:color/white</item>
        <!-- Customize your theme here. -->
        <!--<item name="colorPrimary">@color/colorPrimary</item>-->
        <item name="colorPrimaryDark">@android:color/transparent</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorControlNormal">#FFFFFF</item>


        <!--
                actionbar style
        -->
        <item name="android:actionBarSize">100dp</item>
        <item name="actionBarSize">100dp</item>
        <item name="color">@color/white</item>
    </style>
    <!-- Theme.AppCompat.Light is not a dialog theme -->
    <style name="DialogTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorAccent">@color/app_mustard</item>
    </style>

    <style name="dashboard_textview_optionsstyle">
        <item name="android:fontFamily">@font/nunito_sans</item>
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textAlignment">center</item>
        <item name="android:drawablePadding">10dp</item>

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="dashboard_options_icons_style">
        <item name="android:layout_height">62dp</item>
        <item name="android:layout_width">62dp</item>
    </style>
    

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
    <style name="SquareFloatingShapeOVerlay" parent="">
        <item name="cornerSize">0dp</item>
    </style>

    <style name="billpaymentroundedtextviewstyle">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">#f4f4f4</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_width">58dp</item>
        <item name="android:paddingLeft">23dp</item>
        <item name="android:paddingRight">23dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">19dp</item>
        <item name="android:layout_marginLeft">19dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="DashboardTheme" parent="@style/Theme.MaterialComponents.Light.NoActionBar">

        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryVariant">@color/app_mustard</item>
        <item name="colorOnPrimary">@color/app_mustard</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/app_mustard</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

    </style>

</resources>