<?xml version="1.0" encoding="utf-8"?>
<!--we are using merge as a parent layout for merging all our views-->
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/main_bg"

        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <!--below is the image view where we will
        be displaying images in our stories-->
    <ImageView
        app:layout_constraintTop_toBottomOf="@+id/tv_onboardingSubheader"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_getStartedo"
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:lineSpacingExtra="5dp"


        android:layout_height="wrap_content"
        />

    <!--on below line we are creating
        linear layout for our views-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <!--view to handle move to previous image-->
        <View
            android:id="@+id/reverse"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <!--view to move to the next image-->
        <View
            android:id="@+id/skip"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />


    </LinearLayout>
        <TextView
            android:drawableLeft="@drawable/onboard_icon"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:drawablePadding="8dp"
            android:id="@+id/tv_WelcomeTxt"
            app:layout_constraintTop_toBottomOf="@id/stories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="11sp"
            android:textColor="#ffffff"
            android:text="Welcome to Tyler-Soft Eclectics"/>

        <TextView
            android:lineSpacingExtra="2dp"
            android:id="@+id/tv_onboardingHeadertitle"
            app:layout_constraintTop_toBottomOf="@id/tv_WelcomeTxt"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/margin_16dp"
            android:layout_marginEnd="@dimen/margin_16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_marginTop="24dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="22sp"
            android:textColor="#ffffff"
            android:maxLines="3"
            android:text="@string/seamless"/>
        <TextView
            android:id="@+id/tv_onboardingSubheader"
            app:layout_constraintTop_toBottomOf="@id/tv_onboardingHeadertitle"
            android:layout_width="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@id/tv_onboardingHeadertitle"
            app:layout_constraintEnd_toEndOf="@id/tv_onboardingHeadertitle"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="#ffffff"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_getStartedo"
            android:layout_marginBottom="24dp"
            android:text="@string/get_started"
            android:padding="18dp"
            app:strokeColor="@color/white"
            app:cornerRadius="10dp"
            android:textSize="12sp"
            android:layout_width="0dp"
            android:layout_margin="@dimen/margin_16dp"
            android:textColor="@color/white"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent" />

    <!--below widget is use to create indicator for our stories at top-->
    <jp.shts.android.storiesprogressview.StoriesProgressView
        android:id="@+id/stories"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_gravity="top"
        android:layout_marginTop="40dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
