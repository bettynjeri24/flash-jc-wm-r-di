<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.ekenya.rnd.dashboard.view.LandingPageFragment">
      <com.flaviofaria.kenburnsview.KenBurnsView

          android:id="@+id/image"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:src="@drawable/landing" />

  <include
      app:layout_constraintTop_toTopOf="parent"
      android:layout_marginTop="80dp"
      android:id="@+id/logo_image"
      layout="@layout/app_logo_imageview"
      android:layout_width="match_parent"
      android:layout_height="wrap_content" />

  <com.google.android.material.textfield.TextInputLayout
      android:id="@+id/til_fromDestination"
      style="@style/exposed_dropdown_style"
      android:background="@drawable/transparent_background"
      android:layout_width="wrap_content"
      android:alpha="0.5"
      android:visibility="invisible"
      android:layout_marginTop="@dimen/margin_16dp"
      android:focusable="false"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@id/logo_image">

    <AutoCompleteTextView
        android:id="@+id/app_language"
        style="@style/signupedittext_style"
        android:focusable="false"
        android:text="English:"
        android:inputType="textCapSentences"
        android:textColor="@color/black_text_color"

        />

  </com.google.android.material.textfield.TextInputLayout>

  <TextView
        android:id="@+id/tv_Greetings"
        app:layout_constraintStart_toStartOf="@id/tv_aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="28sp"
        android:textColor="#ffffff"
        android:layout_marginBottom="45dp"
        app:layout_constraintBottom_toTopOf="@id/tv_aboutUs"
        android:lineSpacingExtra="12sp"
        android:text="Good Morning Alex!  \n
Enjoy cashless  \n Transactions "/>

    <TextView
        android:id="@+id/tv_aboutUs"
        android:textAlignment="center"
        android:drawableLeft="@drawable/ic_info"
        android:layout_marginBottom="21dp"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="@id/btn_getStarted"
        app:layout_constraintBottom_toTopOf="@id/btn_getStarted"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="@string/about_us"/>
    <TextView
        android:id="@+id/tv_help"
        android:layout_marginStart="18dp"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toEndOf="@id/tv_location"
        app:layout_constraintTop_toTopOf="@id/tv_aboutUs"
        android:drawableLeft="@drawable/ic_help"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="@string/help"/>
    <TextView
        android:id="@+id/tv_location"
        android:layout_marginStart="18dp"
        app:layout_constraintStart_toEndOf="@id/tv_aboutUs"
        android:drawablePadding="8dp"
        android:drawableLeft="@drawable/ic_location"
        app:layout_constraintTop_toTopOf="@id/tv_aboutUs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#ffffff"
        android:text="@string/locate_us"/>
  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_getStarted"
      style="@style/main_buttons_style"
      android:text="@string/get_started"
      android:layout_marginTop="@dimen/margin_16dp"
      android:layout_marginBottom="@dimen/margin_16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>