<?xml version="1.0" encoding="utf-8"?>

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/tv_createbankrecipientcard"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/billpayments_options_background"

        android:padding="@dimen/margin_16dp">



        <TextView
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="24dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/tv_billTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/app_mustard"
            android:text="Bills &amp; Airtime"/>
        <TextView
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tv_billTitle"
            app:layout_constraintTop_toBottomOf="@id/tv_billTitle"
            android:id="@+id/tv_amountconsumed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="12sp"
            android:textColor="@color/black_text_color"
            android:text="GHS 152.10"/>

    <TextView
        android:text="1%"
        android:id="@+id/percentageConsumed"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_arrow_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_billTitle" />

    </androidx.constraintlayout.widget.ConstraintLayout>


