<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <de.hdodenhof.circleimageview.CircleImageView

            android:id="@+id/iconProfile"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginTop="@dimen/margin_16dp"
            android:src="@drawable/ic_default_profile_icon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customers_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="Alex Mwangi Wanjohi"
            android:textColor="#ff4700"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iconProfile" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_inviteFriends"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:drawableLeft="@drawable/ic_gift"
            android:drawablePadding="8dp"
            android:padding="10dp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:text="INVITE FRIENDS"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/customers_name" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_marginBottom="@dimen/margin_16dp"
            app:layout_constraintTop_toBottomOf="@id/button_inviteFriends">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_account"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_16dp"
                    android:text="Account"
                    android:textColor="@color/black_text_color"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/personaldetails_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/billpayments_options_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_account"
                    app:layout_constraintTop_toBottomOf="@id/tv_account"

                    >

                    <TextView
                        android:id="@+id/tv_personalDetails"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_user"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:fontFamily="@font/nunito_sans"
                        android:text="Personal Details"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:layout_editor_absoluteX="8dp" />

                    <TextView
                        android:id="@+id/tv_security"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_protection"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:fontFamily="@font/nunito_sans"
                        android:text="Security"
                        app:layout_constraintTop_toBottomOf="@id/tv_personalDetails"
                        tools:layout_editor_absoluteX="8dp" />
                    <TextView
                        android:id="@+id/tv_customerService"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_customerservice"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:fontFamily="@font/nunito_sans"
                        android:text="Customer Service"
                        app:layout_constraintTop_toBottomOf="@id/tv_security"
                        tools:layout_editor_absoluteX="8dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/tv_more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="More"
                    android:textColor="#797979"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/tv_account"
                    app:layout_constraintTop_toBottomOf="@id/personaldetails_layout" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/additionaldetails_layout"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:background="@drawable/billpayments_options_background"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_account"
                    app:layout_constraintTop_toBottomOf="@id/tv_more"

                    >

                    <TextView
                        android:id="@+id/tv_FAQs"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_faq"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:text="FAQs"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_contactSupport"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_call"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:text="Contact Support"
                        app:layout_constraintTop_toBottomOf="@id/tv_FAQs" />

                    <TextView
                        android:id="@+id/tv_rateUs"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_star_rate"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:text="Rate Us"
                        app:layout_constraintTop_toBottomOf="@id/tv_contactSupport" />

                    <TextView
                        android:id="@+id/tv_logout"
                        style="@style/profile_textview_style"
                        android:drawableLeft="@drawable/ic_log_in"
                        android:drawableRight="@drawable/ic_arrow_next"
                        android:text="Sign Out"
                        app:layout_constraintTop_toBottomOf="@id/tv_rateUs" />


                </androidx.constraintlayout.widget.ConstraintLayout>
                <TextView
                    android:layout_margin="@dimen/textsize_16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/tv_versioncode"
                    android:text="Version 1.0.4"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/additionaldetails_layout" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <ImageView
            android:id="@+id/image_captureprofilePhoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/iconProfile"
            app:layout_constraintStart_toStartOf="@+id/guideline2"
            app:srcCompat="@drawable/ic_captureimage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>