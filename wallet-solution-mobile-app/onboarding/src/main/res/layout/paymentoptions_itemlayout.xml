<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/paymentOption"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewWallet"
        app:cardElevation="0dp"
        app:layout_goneMarginTop="40dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="0dp"
        android:background="#e4e4e4"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:cardCornerRadius="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_40percent"

            android:padding="@dimen/margin_16dp">
            <ImageView
                android:id="@+id/paymentOptionIcon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/paymentOptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:text="@string/tollo_cash_wallet"
                android:textColor="@color/app_mustard"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@+id/paymentOptionIcon"
                app:layout_constraintTop_toTopOf="@+id/paymentOptionIcon" />

            <TextView
                android:id="@+id/paymentOptionDescription"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:text="Use your wallet to make payments"
                android:textColor="@color/black_text_color"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="@+id/paymentOptionIcon"
                app:layout_constraintEnd_toStartOf="@+id/walletcardview"
                app:layout_constraintStart_toStartOf="@+id/paymentOptionTitle"
                app:layout_constraintTop_toBottomOf="@id/paymentOptionTitle" />
            <ImageView
                android:id="@+id/walletcardview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_marginEnd="@dimen/margin_16dp"
                android:background="@drawable/ic_arrow_next"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>