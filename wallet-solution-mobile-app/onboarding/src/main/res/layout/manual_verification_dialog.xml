<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:padding="@dimen/margin_16dp"
    android:layout_marginEnd="@dimen/margin_16dp"
    android:layout_marginStart="@dimen/margin_16dp"
    android:background="@drawable/roundedcorner"

    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/btn_dismissDialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_path_1684_path" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_dismissDialog"
        app:srcCompat="@drawable/ic_oops" />

    <TextView
        android:id="@+id/tv_sorry"
        android:layout_marginTop="8dp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/app_mustard"
        android:text="Select One"/>
    <TextView
        android:layout_marginTop="12dp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sorry"
        android:id="@+id/tv_changetomanual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/black_text_color"
        android:lineSpacingExtra="4sp"
        android:gravity="center_horizontal"
        android:text="Kindly select your preferred \n method of verification"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_scanID"
        android:layout_width="0dp"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@color/app_mustard"
        android:text="SCAN ID"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_12sp"
        app:cornerRadius="10dp"
        app:layout_constraintBottom_toTopOf="@id/btn_manualverification"
        app:layout_constraintEnd_toEndOf="@+id/btn_manualverification"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@id/btn_manualverification"
        app:layout_constraintTop_toBottomOf="@+id/tv_changetomanual" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_manualverification"


        android:layout_width="0dp"
        android:padding="@dimen/margin_16dp"
        style="?attr/materialButtonOutlinedStyle"

        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:text="ENTER MANUALLY"
        app:strokeColor="@color/app_mustard"
        android:textColor="@color/app_mustard"
        android:textSize="@dimen/textsize_12sp"
        android:layout_marginBottom="8dp"
        app:cornerRadius="10dp"
        app:layout_constraintTop_toBottomOf="@id/btn_scanID"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>