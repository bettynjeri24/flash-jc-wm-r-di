<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:id="@+id/optionOneRadioButton"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin_16dp"
    app:cardCornerRadius="10dp"

    app:cardElevation="0dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="@id/til_metreNumber"
    app:layout_constraintTop_toBottomOf="@id/til_metreNumber"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bottomsheet_greycolor"
        android:paddingStart="10dp"
        android:paddingTop="@dimen/margin_16dp"
        android:paddingEnd="@dimen/margin_16dp"
        android:paddingBottom="@dimen/margin_16dp">
        <ImageView
            android:src="@drawable/ic_intercape"
            android:layout_marginStart="5dp"
            android:id="@+id/currency_spinner"
            android:backgroundTint="@color/black_text_color"
            android:padding="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:spinnerMode="dropdown"
            />



        <TextView
            android:id="@+id/tv_WalletBalance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="8dp"
            android:text="Airline"
            android:textColor="@color/black_text_color"
            android:textSize="10sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toStartOf="@+id/tv_amount"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/currency_spinner" />

        <TextView
            android:id="@+id/from_destination"
            app:layout_constraintTop_toBottomOf="@id/tv_amount"
            app:layout_constraintStart_toStartOf="@id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textStyle="normal"
            android:layout_marginTop="6dp"
            android:textSize="12sp"
            android:textColor="@color/black_text_color"
            android:lineSpacingExtra="12sp"
            android:text="Johannesburg"/>
        <ImageView
            android:id="@+id/dotted_line"
            app:layout_constraintStart_toStartOf="@id/tv_amount"
            app:layout_constraintTop_toBottomOf="@id/from_destination"
            android:layout_width="0dp"
            android:layout_marginTop="6dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="5dp"
            android:src="@drawable/dotted_layout"
            android:layerType="software" />
        <TextView
            android:id="@+id/tv_remainingSeats"
            android:layout_marginTop="6dp"
            app:layout_constraintStart_toStartOf="@id/tv_amount"
            app:layout_constraintTop_toBottomOf="@id/dotted_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="12sp"
            android:textColor="@color/black_text_color"
            android:lineSpacingExtra="12sp"
            android:text="21 seats Remaining"/>
        <TextView
            android:id="@+id/toDestination"
            app:layout_constraintTop_toTopOf="@id/from_destination"
            app:layout_constraintTop_toBottomOf="@id/time"
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:textStyle="normal"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@color/black_text_color"
            android:lineSpacingExtra="12sp"
            android:text="Durban"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:00PM"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintBottom_toBottomOf="@+id/tv_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_amount" />
        <TextView
            app:layout_constraintStart_toStartOf="@id/tv_amount"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tv_remainingSeats"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="14sp"
            android:textColor="#000000"
            android:lineSpacingExtra="10sp"
            android:text="GHS 1,400"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_book"
            app:layout_constraintTop_toTopOf="@id/tv_remainingSeats"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="10sp"
            android:textColor="#ffffff"
            android:text="BOOK NOW"/>


        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="43dp"
            android:text="7:00AM"
            android:textColor="#000000"
            android:textSize="14sp"
            android:textStyle="normal"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/tv_WalletBalance"
            app:layout_constraintTop_toTopOf="@id/currency_spinner" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
