<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_height="wrap_content">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/upcomingbiller_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bill_payments" />

    <TextView
        android:id="@+id/bill_title"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@id/upcomingbiller_icon"
        app:layout_constraintTop_toBottomOf="@id/upcomingbiller_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="14sp"
        android:textColor="#707070"
        android:text="Water Utilities"/>
    <TextView
        android:id="@+id/tv_accountNumber"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@id/bill_title"
        app:layout_constraintTop_toBottomOf="@id/bill_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#707070"
        android:text="A/C 426587"/>
    <TextView
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_billAmount"
        app:layout_constraintStart_toStartOf="@id/bill_title"
        app:layout_constraintTop_toBottomOf="@id/tv_accountNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="GHS 3,000.00"/>
    <View
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="5dp"
        android:background="#1319cd"
        android:layout_height="0dp"/>

    <Button
        android:layout_marginEnd="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@id/bill_title"
        app:layout_constraintTop_toBottomOf="@id/tv_billAmount"
        android:id="@+id/btn_paynow"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="#1319cd"
        tools:text="PAY NOW"
        android:layout_marginBottom="@dimen/margin_16dp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        />
</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>