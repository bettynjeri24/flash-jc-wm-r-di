    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_emailAddress"
        style="@style/textinputlayout_style"
        android:background="@drawable/rounded_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_fullName">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_email"
            style="@style/signupedittext_style"
            android:hint="@string/txt_emailAddress"
            android:inputType="textEmailAddress"

            />

    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:layout_marginTop="@dimen/margin_16dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/til_emailAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/black_text_color"
        android:lineSpacingExtra="12sp"
        android:text="Step 1 of 3"/>
    <CheckBox

        android:id="@+id/checkbox_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:lineSpacingExtra="12sp"
        android:text="I agree to the "
        android:textColor="@color/black_text_color"
        android:textSize="12sp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:textStyle="normal"

        app:layout_constraintBottom_toTopOf="@id/btn_continue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_terms_n_conditions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:layout_marginStart="0dp"
        android:text="Terms &amp; Conditions"
        android:textColor="@color/app_mustard"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toTopOf="@id/btn_continue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/checkbox_terms"
        app:layout_constraintTop_toTopOf="@+id/checkbox_terms" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/main_buttons_style"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:text="@string/txt_continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>




