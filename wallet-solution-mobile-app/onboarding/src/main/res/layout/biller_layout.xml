<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/greybackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_marginStart="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/biller_name"
        android:id="@+id/biller_icon"
        android:layout_width="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/biller_name"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_bill_payments"
        tools:layout_editor_absoluteX="14dp"
        tools:layout_editor_absoluteY="85dp" />

    <TextView
        android:id="@+id/biller_name"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="24dp"
        app:layout_constraintStart_toEndOf="@id/biller_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="14dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/black_text_color"
        android:text="DSTV"/>
</androidx.constraintlayout.widget.ConstraintLayout>