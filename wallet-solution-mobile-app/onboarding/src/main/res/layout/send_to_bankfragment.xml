<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fragment_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="22sp"
        android:layout_marginStart="@dimen/margin_16dp"
        android:textColor="#000000"
        android:text="Send to Bank"/>

    <TextView
        android:id="@+id/fragment_info"
        android:layout_marginTop="@dimen/margin_16dp"
        app:layout_constraintStart_toStartOf="@id/fragment_title"
        app:layout_constraintTop_toBottomOf="@id/fragment_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="@color/black_text_color"
        android:lineSpacingExtra="3dp"
        android:text="How much would you like to send?"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/optionOneRadioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/fragment_info"
        app:layout_constraintTop_toBottomOf="@id/fragment_info">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/bottomsheet_greycolor"
            android:paddingStart="10dp"
            android:paddingTop="@dimen/margin_16dp"
            android:paddingEnd="@dimen/margin_16dp"
            android:paddingBottom="@dimen/margin_16dp">

            <TextView
                android:id="@+id/currency_spinner"
                android:layout_width="6dp"
                android:layout_height="3dp"
                android:backgroundTint="@color/black_text_color"
                android:padding="0dp"
                android:spinnerMode="dropdown"
                android:text="@string/tollo_currency"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />



            <TextView
                android:id="@+id/tv_WalletBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Balance: GHS 98,000.00"
                android:textColor="@color/black_text_color"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toStartOf="@+id/tv_amount"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintHorizontal_chainStyle="spread_inside"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/currency_spinner" />

            <EditText
                android:id="@+id/et_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:ems="10"
                android:hint="20,000.00"
                android:inputType="number"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="@+id/tv_amount"
                app:layout_constraintTop_toBottomOf="@id/tv_amount"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/tv_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="43dp"
                android:text="@string/enter_amount"
                android:textColor="@color/app_mustard"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/tv_WalletBalance"
                app:layout_constraintTop_toTopOf="@id/currency_spinner" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        app:layout_constraintTop_toBottomOf="@id/optionOneRadioButton"
        android:id="@+id/tv_bankdetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:textStyle="normal"
        android:textSize="12sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@id/optionOneRadioButton"
        app:layout_constraintStart_toStartOf="@id/optionOneRadioButton"
        android:text="Bank details"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_selectBank"
        style="@style/exposed_dropdown_style"
        android:background="@drawable/rounded_layout"
        android:focusable="false"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bankdetails">

        <AutoCompleteTextView
            android:focusable="false"

            android:id="@+id/bankSpinner"
            style="@style/signupedittext_style"
            android:hint="Select Bank:"
            android:inputType="textCapSentences"

            />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_accountNumber"
        style="@style/textinputlayout_style"
        android:background="@drawable/rounded_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_accountName"
        tools:layout_editor_absoluteX="133dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_accountNumber"
            style="@style/signupedittext_style"
            android:hint="@string/account_number"
            android:maxLength="12"
            android:inputType="number"


            />

    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_accountName"
        style="@style/textinputlayout_style"
        android:background="@drawable/rounded_layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/til_selectBank"
        tools:layout_editor_absoluteX="133dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/et_accountname"
            style="@style/signupedittext_style"
            android:hint="@string/account_name"

            android:inputType="text"


            />

    </com.google.android.material.textfield.TextInputLayout>





    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_continue"
        style="@style/main_buttons_style"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginBottom="@dimen/margin_16dp"
        android:text="@string/txt_continue"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>
