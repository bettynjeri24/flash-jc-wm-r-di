<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ekenya.rnd.dashboard.view.SavingsAccountDetailFragment">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbarlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:elevation="0dp"
        app:elevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@color/white"
            app:contentInsetStart="0dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@color/app_mustard">

                <ImageView
                    android:id="@+id/close_icon"

                    android:layout_width="15dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:focusable="true"
                    android:src="@drawable/ic_back_white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_savingsTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_16dp"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="Car Savings Account"
                    android:textColor="#ffffff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/close_icon" />

                <TextView
                    android:id="@+id/tv_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_16dp"
                    android:text="Balance"
                    android:textColor="#d8d8d8"
                    android:textSize="8sp"
                    android:textStyle="normal"
                    app:layout_constraintStart_toStartOf="@id/tv_savingsTitle"
                    app:layout_constraintTop_toBottomOf="@id/tv_savingsTitle" />

                <TextView
                    android:id="@+id/tv_balanceAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="GHS 350,000.00"
                    android:textColor="#d8d8d8"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/tv_balance"
                    app:layout_constraintTop_toBottomOf="@id/tv_balance" />

                <com.google.android.material.button.MaterialButton

                    android:id="@+id/btn_fundAccount"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_add_white"
                    android:text="Fund Account"
                    android:textColor="@color/app_mustard"
                    android:textSize="8sp"
                    app:cornerRadius="5dp"
                    app:layout_constraintStart_toStartOf="@id/tv_balanceAmount"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balanceAmount"
                    tools:layout_editor_absoluteX="22dp" />

                <com.google.android.material.button.MaterialButton

                    android:id="@+id/btn_transact"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"

                    android:backgroundTint="@color/white"
                    android:drawableLeft="@drawable/ic_add_white"
                    android:text="Withdraw"
                    android:textColor="@color/app_mustard"
                    android:textSize="8sp"
                    app:cornerRadius="5dp"
                    app:layout_constraintStart_toEndOf="@id/btn_fundAccount"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balanceAmount"
                    tools:layout_editor_absoluteX="22dp" />

                <com.google.android.material.button.MaterialButton

                    android:id="@+id/btn_participants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:backgroundTint="@color/white"

                    android:drawableLeft="@drawable/ic_participants"
                    android:text="Participants"
                    android:textColor="@color/app_mustard"
                    android:textSize="8sp"
                    app:cornerRadius="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/btn_transact"
                    app:layout_constraintTop_toBottomOf="@+id/tv_balanceAmount"
                    tools:layout_editor_absoluteX="22dp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/margin_16dp"
                    android:src="@drawable/ic_personalsvgs"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>

    <TextView
        android:id="@+id/tv_achievements"
        android:layout_width="wrap_content"
        android:layout_height="12dp"
        android:layout_margin="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="Achievements"
        android:textColor="#6e6e6e"
        android:textSize="10sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/appbarlayout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/optionOneRadioButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_achievements"
        app:layout_constraintTop_toBottomOf="@id/tv_achievements">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"

            android:padding="@dimen/margin_16dp">

            <TextView
                android:id="@+id/tv_percent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Saved 10%"
                android:textColor="#ec6666"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GHS 20,000.00/ 300,000.00"
                android:textColor="#707070"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/tv_percent" />

            <com.google.android.material.progressindicator.LinearProgressIndicator

                android:id="@+id/progressbar"
                android:layout_width="0dp"
                android:layout_height="5dp"
                android:layout_marginTop="@dimen/margin_16dp"
                android:indeterminate="false"
                android:progress="10"
                app:indicatorColor="#ec6666"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_percent"
                app:layout_constraintTop_toBottomOf="@id/tv_percent"
                app:trackColor="#ced5e1"
                app:trackCornerRadius="20dp"
                app:trackThickness="5dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_16dp"
                android:text="Deadline: Dec 30, 2021, 149 Days to go"
                android:textColor="#707070"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintTop_toBottomOf="@id/progressbar" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardview2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_16dp"
        android:layout_marginEnd="@dimen/margin_16dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_achievements"
        app:layout_constraintTop_toBottomOf="@id/optionOneRadioButton">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f6f6f6"

            android:padding="@dimen/margin_16dp">

            <ImageView
                android:id="@+id/img_reccurentDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_paymerchant"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_reccurentDeposit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_16dp"
                android:text="Recurrent Deposit"
                android:textColor="#000000"
                android:textSize="12sp"
                android:textStyle="normal"
                app:layout_constraintStart_toEndOf="@id/img_reccurentDeposit"
                app:layout_constraintTop_toTopOf="@id/img_reccurentDeposit" />

            <TextView
                android:layout_width="172dp"
                android:layout_height="wrap_content"
                android:text="Set a recurrent deposit to save easier from your wallet "
                android:textColor="#707070"
                android:textSize="8sp"
                android:textStyle="normal"
                app:layout_constraintStart_toStartOf="@id/tv_reccurentDeposit"
                app:layout_constraintTop_toBottomOf="@id/tv_reccurentDeposit" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/tv_reccurentDeposit"
                tools:layout_editor_absoluteX="278dp" />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_recents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_16dp"
        android:layout_marginTop="@dimen/margin_16dp"
        android:text="Recents"
        android:textColor="#6f7070"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardview2" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_margin="@dimen/margin_16dp"
        android:text="see all"
        android:textColor="#1319cd"
        android:textSize="12sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tv_recents" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_recents" />


</androidx.constraintlayout.widget.ConstraintLayout>