<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:id="@+id/card"
    android:backgroundTint="@color/colorAccent"
    android:elevation="5dp"
    app:cardCornerRadius="10dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">

        <ImageView
            android:id="@+id/dashboard_item_icon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="@dimen/margin_16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dashboard_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mobile Wallet"
            android:fontFamily="@font/nunito_sans"
            android:visibility="invisible"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="normal"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="@+id/dashboard_item_icon"
            app:layout_constraintStart_toEndOf="@+id/dashboard_item_icon"
            app:layout_constraintTop_toTopOf="@+id/dashboard_item_icon" />

        <TextView
            android:id="@+id/dashboard_item_balance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Balance"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:fontFamily="@font/nunito_sans"

            android:textStyle="normal"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/dashboard_item_icon"
            app:layout_constraintTop_toBottomOf="@+id/dashboard_item_icon" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/nunito_sans"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"
            android:textColor="#ffffff"
            android:textSize="14sp"
            android:textStyle="bold"
            android:visibility="visible"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/dashboard_item_balance"
            app:layout_constraintTop_toBottomOf="@id/dashboard_item_balance"
            tools:text="GHS 00.00" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_topUpWallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/nunito_sans"
            android:padding="5dp"
            android:visibility="invisible"
            android:text="Top-Up Wallet"
            android:textColor="@color/app_orange"
            android:textSize="11sp"
            app:layout_constraintBottom_toBottomOf="@id/tv_amount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.96"
            app:layout_constraintStart_toEndOf="@+id/tv_amount"
            app:layout_constraintTop_toBottomOf="@+id/tv_amount"
            app:layout_constraintTop_toTopOf="@+id/tv_amount" />

        <TextView
            android:fontFamily="@font/nunito_sans"
            android:drawableEnd="@drawable/ic_next_small_white"
            android:id="@+id/btn_viewTransactions"
            android:layout_width="wrap_content"
            android:drawablePadding="4dp"
            android:text="View Wallet"
            android:visibility="invisible"
            android:textColor="@color/white"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/btn_topUpWallet"
            app:layout_constraintTop_toTopOf="@+id/dashboard_item_title"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>