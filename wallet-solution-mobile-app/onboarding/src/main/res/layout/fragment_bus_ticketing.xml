            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_fromDestination"
                style="@style/exposed_dropdown_style"
                android:background="@drawable/rounded_layout"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <AutoCompleteTextView
                    android:id="@+id/textField"

                    style="@style/signupedittext_style"
                    android:focusable="false"
                    android:hint="From:"
                    android:inputType="textCapSentences"
                    android:textColor="@color/black_text_color"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_toDestination"
                style="@style/exposed_dropdown_style"
                android:background="@drawable/rounded_layout"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/til_fromDestination">

                <AutoCompleteTextView
                    android:id="@+id/textField2"

                    style="@style/signupedittext_style"
                    android:focusable="false"
                    android:hint="To:"
                    android:inputType="textCapSentences"

                    android:textColor="@color/black_text_color"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_SelectPreferedAirline"
                style="@style/exposed_dropdown_style"
                android:background="@drawable/rounded_layout"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/til_toDestination">

                <AutoCompleteTextView
                    android:id="@+id/preferredAirline"

                    style="@style/signupedittext_style"
                    android:focusable="false"
                    android:hint="Select Airline:"
                    android:inputType="textCapSentences"

                    android:textColor="@color/black_text_color"

                    />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_SelectClassAirline"
                style="@style/exposed_dropdown_style"
                android:background="@drawable/rounded_layout"
                android:focusable="false"
                app:layout_constraintStart_toStartOf="parent"

                app:layout_constraintTop_toBottomOf="@+id/til_SelectPreferedAirline">

                <AutoCompleteTextView
                    android:id="@+id/preferredClass"

                    style="@style/signupedittext_style"
                    android:focusable="false"
                    android:hint="Select Class:"
                    android:inputType="textCapSentences"

                    android:textColor="@color/black_text_color"

                    />

            </com.google.android.material.textfield.TextInputLayout>

