        <TextView
            android:id="@+id/tv_transactionCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="Account:"
            android:textColor="#7f8080"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toStartOf="@+id/tv_Sender"
            app:layout_constraintTop_toBottomOf="@id/view2" />

        <TextView
            android:id="@+id/tv_accountNumberValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+263 7123 *** 78"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_transactionCost" />

        <View
            android:id="@+id/view4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="@dimen/margin_16dp"
            android:background="@color/grey_40percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_accountNumberValue" />

        <TextView
            android:id="@+id/tv_totalAmountToPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="Date:"
            android:textColor="#7f8080"
            android:textSize="12sp"
            android:textStyle="normal"

            app:layout_constraintStart_toStartOf="@+id/tv_transactionCost"
            app:layout_constraintTop_toBottomOf="@id/view4" />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12 Nov 2021"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_totalAmountToPay" />

        <View
            android:id="@+id/view6"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_margin="@dimen/margin_16dp"
            android:background="@color/grey_40percent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_date" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_16dp"
            android:text="Time:"
            android:textColor="#7f8080"
            android:textSize="12sp"
            android:textStyle="normal"

            app:layout_constraintStart_toStartOf="@+id/tv_transactionCost"
            app:layout_constraintTop_toBottomOf="@id/view6" />

        <TextView
            android:id="@+id/tv_timeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4:00PM"
            android:textColor="#000000"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_time" />
